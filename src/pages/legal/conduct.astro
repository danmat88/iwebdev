---
import LegalLayout from '../../layouts/LegalLayout.astro';
import { siteConfig } from '../../content/global/site.config';
import { Icon } from 'astro-icon/components';
---

<LegalLayout
  title="Code of Conduct"
  description="Building a better community together"
  lastUpdated="Feb 9, 2026"
  effectiveDate="Feb 9, 2026"
  version="1.5"
  category="conduct"
  relatedDocs={[
    { title: "Terms of Service", href: "/legal/terms", icon: "lucide:file-text" },
    { title: "Privacy Policy", href: "/legal/privacy", icon: "lucide:shield" },
    { title: "Report Issue", href: "/support/report", icon: "lucide:flag" }
  ]}
>
  <!-- Mission Statement -->
  <div class="mission-statement">
    <div class="mission-glow"></div>
    <div class="mission-badge">
      <Icon name="lucide:heart" />
      <div class="badge-pulse"></div>
    </div>
    <div class="mission-content">
      <div class="mission-header">
        <strong>Our Mission</strong>
        <span class="mission-tag">Core Values</span>
      </div>
      <p>Create an inclusive space where every developer can thrive, learn, and build amazing things together.</p>
    </div>
  </div>

  <!-- Core Values Grid -->
  <div class="values-grid">
    <div class="value-card" style="--i:0">
      <Icon name="lucide:handshake" />
      <strong>Respect</strong>
    </div>
    <div class="value-card" style="--i:1">
      <Icon name="lucide:users" />
      <strong>Inclusivity</strong>
    </div>
    <div class="value-card" style="--i:2">
      <Icon name="lucide:shield-check" />
      <strong>Integrity</strong>
    </div>
    <div class="value-card" style="--i:3">
      <Icon name="lucide:lightbulb" />
      <strong>Collaboration</strong>
    </div>
    <div class="value-card" style="--i:4">
      <Icon name="lucide:target" />
      <strong>Excellence</strong>
    </div>
    <div class="value-card" style="--i:5">
      <Icon name="lucide:heart-handshake" />
      <strong>Empathy</strong>
    </div>
  </div>

  <h2>1. Expected Behavior</h2>
  
  <!-- Behavior Matrix -->
  <div class="behavior-matrix">
    <div class="behavior-card do">
      <div class="card-header">
        <Icon name="lucide:check-circle" />
        <strong>Do This</strong>
      </div>
      <ul>
        <li>Be respectful & professional</li>
        <li>Welcome newcomers warmly</li>
        <li>Share knowledge generously</li>
        <li>Give constructive feedback</li>
        <li>Assume good intentions</li>
        <li>Celebrate others' successes</li>
      </ul>
    </div>
    <div class="behavior-card dont">
      <div class="card-header">
        <Icon name="lucide:x-circle" />
        <strong>Don't Do This</strong>
      </div>
      <ul>
        <li>Harass or discriminate</li>
        <li>Post spam or ads</li>
        <li>Share false information</li>
        <li>Troll or provoke</li>
        <li>Attack people personally</li>
        <li>Share private info without consent</li>
      </ul>
    </div>
  </div>

  <h2>2. Unacceptable Behavior</h2>
  
  <!-- Zero Tolerance Terminal -->
  <div class="terminal-block warning">
    <div class="terminal-header">
      <div class="terminal-dots">
        <span></span><span></span><span></span>
      </div>
      <span>zero_tolerance.sh</span>
    </div>
    <div class="terminal-body">
      <div class="terminal-line"><span class="prompt">$</span> <span class="cmd">list</span> --violations</div>
      <div class="terminal-output">
        <div class="violation-item critical">
          <Icon name="lucide:ban" /> Harassment & discrimination
        </div>
        <div class="violation-item critical">
          <Icon name="lucide:ban" /> Hate speech or threats
        </div>
        <div class="violation-item critical">
          <Icon name="lucide:ban" /> Doxxing or stalking
        </div>
        <div class="violation-item high">
          <Icon name="lucide:alert-octagon" /> Personal attacks & bullying
        </div>
        <div class="violation-item high">
          <Icon name="lucide:alert-octagon" /> Malicious code or exploits
        </div>
        <div class="violation-item medium">
          <Icon name="lucide:alert-triangle" /> Spam & self-promotion
        </div>
      </div>
    </div>
  </div>

  <h3>2.1 Harassment</h3>
  <p>
    Includes intimidation, unwelcome sexual attention, stalking, or sustained disruption. Zero tolerance policy.
  </p>

  <h3>2.2 Abusive Conduct</h3>
  <p>
    Personal attacks, threats, bullying, or public/private harassment of any kind is prohibited.
  </p>

  <h2>3. Reporting & Enforcement</h2>
  
  <!-- Report Methods -->
  <div class="report-methods">
    <a href="/support/report" class="report-card">
      <Icon name="lucide:flag" />
      <div>
        <strong>Report Button</strong>
        <span>On any post or profile</span>
      </div>
    </a>
    <a href={`mailto:conduct@${siteConfig.url.replace('https://', '').replace('http://', '')}`} class="report-card">
      <Icon name="lucide:mail" />
      <div>
        <strong>Email Team</strong>
        <span>conduct@{siteConfig.url.replace('https://', '').replace('http://', '')}</span>
      </div>
    </a>
    <a href="/support/contact" class="report-card">
      <Icon name="lucide:shield" />
      <div>
        <strong>Confidential Form</strong>
        <span>Anonymous reporting</span>
      </div>
    </a>
  </div>

  <h3>3.1 Investigation Process</h3>
  
  <!-- Process Steps -->
  <div class="process-steps">
    <div class="process-step">
      <div class="step-icon">1</div>
      <div class="step-info">
        <strong>Report</strong>
        <span>Submit via form/email</span>
      </div>
    </div>
    <div class="process-arrow">→</div>
    <div class="process-step">
      <div class="step-icon">2</div>
      <div class="step-info">
        <strong>Review</strong>
        <span>Team investigates (24-48h)</span>
      </div>
    </div>
    <div class="process-arrow">→</div>
    <div class="process-step">
      <div class="step-icon">3</div>
      <div class="step-info">
        <strong>Decision</strong>
        <span>Determine action</span>
      </div>
    </div>
    <div class="process-arrow">→</div>
    <div class="process-step">
      <div class="step-icon">4</div>
      <div class="step-info">
        <strong>Enforce</strong>
        <span>Apply consequences</span>
      </div>
    </div>
  </div>

  <h3>3.2 Enforcement Levels</h3>
  
  <!-- Enforcement Tiers -->
  <div class="enforcement-tiers">
    <div class="tier-item level-1">
      <div class="tier-icon">
        <Icon name="lucide:info" />
      </div>
      <div class="tier-content">
        <div class="tier-header">
          <strong>Level 1</strong>
          <span class="tier-tag">Warning</span>
        </div>
        <p>Informal warning for minor first-time violations</p>
      </div>
    </div>
    <div class="tier-item level-2">
      <div class="tier-icon">
        <Icon name="lucide:alert-circle" />
      </div>
      <div class="tier-content">
        <div class="tier-header">
          <strong>Level 2</strong>
          <span class="tier-tag">Formal Warning</span>
        </div>
        <p>Official warning documented in user record</p>
      </div>
    </div>
    <div class="tier-item level-3">
      <div class="tier-icon">
        <Icon name="lucide:ban" />
      </div>
      <div class="tier-content">
        <div class="tier-header">
          <strong>Level 3</strong>
          <span class="tier-tag">Suspension</span>
        </div>
        <p>Account suspended for 7-30 days</p>
      </div>
    </div>
    <div class="tier-item level-4">
      <div class="tier-icon">
        <Icon name="lucide:x-octagon" />
      </div>
      <div class="tier-content">
        <div class="tier-header">
          <strong>Level 4</strong>
          <span class="tier-tag">Permanent Ban</span>
        </div>
        <p>Account permanently terminated</p>
      </div>
    </div>
  </div>

  <h2>4. Appeals</h2>
  
  <div class="appeals-guarantee">
    <div class="guarantee-badge">
      <Icon name="lucide:scale" />
      <div class="badge-pulse"></div>
    </div>
    <div class="guarantee-content">
      <div class="guarantee-header">
        <strong>Fair Appeals Process</strong>
        <span class="guarantee-tag">Protected</span>
      </div>
      <p>Submit within 14 days • Review by senior team • Decision in 7 days</p>
    </div>
  </div>

  <h2>5. Moderator Guidelines</h2>
  
  <div class="moderator-principles">
    <div class="principle">
      <Icon name="lucide:star" />
      <strong>Lead by Example</strong>
    </div>
    <div class="principle">
      <Icon name="lucide:scale" />
      <strong>Be Fair & Impartial</strong>
    </div>
    <div class="principle">
      <Icon name="lucide:eye" />
      <strong>Be Transparent</strong>
    </div>
    <div class="principle">
      <Icon name="lucide:heart" />
      <strong>Be Respectful</strong>
    </div>
  </div>

  <h2>6. Scope</h2>
  <p>
    Applies to all IAWD spaces: website, forums, events, social media, and when representing IAWD publicly.
  </p>

  <!-- Scope Visual -->
  <div class="scope-grid">
    <div class="scope-item">
      <Icon name="lucide:globe" />
      <span>Online Spaces</span>
    </div>
    <div class="scope-item">
      <Icon name="lucide:calendar" />
      <span>Events & Meetups</span>
    </div>
    <div class="scope-item">
      <Icon name="lucide:message-square" />
      <span>Social Media</span>
    </div>
    <div class="scope-item">
      <Icon name="lucide:briefcase" />
      <span>Official Rep</span>
    </div>
  </div>

  <h2>7. Contact</h2>
  
  <div class="contact-cards">
    <a href={`mailto:conduct@${siteConfig.url.replace('https://', '').replace('http://', '')}`} class="contact-option">
      <Icon name="lucide:users-round" />
      <span>Community Team</span>
    </a>
    <a href={`mailto:${siteConfig.email}`} class="contact-option">
      <Icon name="lucide:help-circle" />
      <span>General Support</span>
    </a>
  </div>

  <!-- Final CTA -->
  <div class="final-cta">
    <div class="final-cta-glow"></div>
    <div class="cta-main">
      <div class="cta-icon">
        <Icon name="lucide:shield-check" />
      </div>
      <div class="cta-text">
        <strong>Together we build a better community for everyone.</strong>
        <span class="cta-meta">Updated Feb 9, 2026 · Effective Feb 9, 2026 · Version 1.5</span>
      </div>
    </div>
    <div class="cta-badge">
      <Icon name="lucide:heart" />
      <span>Committed</span>
    </div>
  </div>
</LegalLayout>

<style>
  /* ===== ANIMATIONS ===== */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 20px var(--accent-3-glow);
    }
    50% {
      box-shadow: 0 0 30px var(--accent-3-glow), 0 0 40px var(--accent-3-muted);
    }
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes pulse-ring {
    0% {
      transform: scale(0.95);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.05);
      opacity: 0;
    }
    100% {
      transform: scale(0.95);
      opacity: 0;
    }
  }

  .animate-in {
    animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
  }

  /* ===== MISSION STATEMENT ===== */
  .mission-statement {
    display: flex;
    align-items: center;
    gap: 18px;
    padding: 20px 24px;
    margin-bottom: 32px;
    background: linear-gradient(135deg, var(--accent-3-muted) 0%, var(--bg-secondary) 100%);
    border: 2px solid var(--accent-3);
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .mission-glow {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, var(--accent-3-glow), transparent 65%);
    opacity: 0.15;
    pointer-events: none;
  }

  .mission-statement:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 36px var(--accent-3-glow);
  }

  .mission-badge {
    position: relative;
    flex-shrink: 0;
    z-index: 1;
  }

  .mission-badge :global(svg) {
    width: 40px;
    height: 40px;
    padding: 10px;
    background: var(--accent-3);
    border-radius: var(--radius-md);
    color: var(--white);
    box-shadow: 0 4px 16px var(--accent-3-glow);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .mission-statement:hover .mission-badge :global(svg) {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 28px var(--accent-3-glow);
  }

  .badge-pulse {
    position: absolute;
    inset: -6px;
    border-radius: var(--radius-lg);
    background: var(--accent-3);
    opacity: 0;
    animation: pulse-ring 2.5s ease-out infinite;
  }

  .mission-content {
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .mission-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 6px;
  }

  .mission-header strong {
    font-size: 15px;
    color: var(--text);
  }

  .mission-tag {
    display: inline-flex;
    padding: 4px 10px;
    background: var(--accent-3);
    color: var(--white);
    font-size: 10px;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-sm);
    box-shadow: 0 2px 8px var(--accent-3-glow);
  }

  .mission-content p {
    font-size: 13px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
  }

  /* ===== VALUES GRID ===== */
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 14px;
    margin: 0 0 32px;
  }

  .value-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 20px 16px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    animation: fadeInUp 0.5s ease-out backwards;
    animation-delay: calc(var(--i) * 0.08s);
  }

  .value-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent-3-muted), transparent);
    opacity: 0;
    transition: opacity 0.4s;
  }

  .value-card:hover {
    border-color: var(--accent-3);
    transform: translateY(-6px);
    box-shadow: 0 12px 32px var(--accent-3-glow);
  }

  .value-card:hover::before {
    opacity: 0.15;
  }

  .value-card :global(svg) {
    width: 28px;
    height: 28px;
    padding: 7px;
    background: var(--accent-3-muted);
    border-radius: var(--radius-md);
    color: var(--accent-3);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    z-index: 1;
  }

  .value-card:hover :global(svg) {
    background: var(--accent-3);
    color: var(--white);
    transform: scale(1.15) rotate(5deg);
  }

  .value-card strong {
    font-size: 13px;
    color: var(--text);
    position: relative;
    z-index: 1;
  }

  /* Behavior Matrix */
  .behavior-matrix {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    margin: 32px 0;
  }

  .behavior-card {
    padding: 24px;
    background: var(--bg-secondary);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .behavior-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, var(--white-alpha-10), transparent);
    transition: left 0.6s;
  }

  .behavior-card:hover::before {
    left: 100%;
  }

  .behavior-card.do {
    border-left: 4px solid var(--success);
  }

  .behavior-card.dont {
    border-left: 4px solid var(--error);
  }

  .behavior-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.2);
  }

  .behavior-card.do:hover {
    border-color: var(--success);
    box-shadow: 0 16px 48px var(--success-glow);
  }

  .behavior-card.dont:hover {
    border-color: var(--error);
    box-shadow: 0 16px 48px var(--error-glow);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 10px;
    padding-bottom: 16px;
    margin-bottom: 16px;
    border-bottom: 1px solid var(--border);
  }

  .behavior-card.do .card-header :global(svg) {
    width: 28px;
    height: 28px;
    padding: 5px;
    background: var(--success);
    border-radius: var(--radius-md);
    color: var(--white);
    box-shadow: 0 4px 16px var(--success-glow);
  }

  .behavior-card.dont .card-header :global(svg) {
    width: 28px;
    height: 28px;
    padding: 5px;
    background: var(--error);
    border-radius: var(--radius-md);
    color: var(--white);
    box-shadow: 0 4px 16px var(--error-glow);
  }

  .card-header strong {
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--text);
  }

  .behavior-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .behavior-card li {
    padding: 10px 0;
    font-size: var(--text-sm);
    color: var(--text-secondary);
    border-bottom: 1px solid var(--border);
    transition: all 0.2s;
  }

  .behavior-card li:hover {
    color: var(--text);
    padding-left: 8px;
  }

  .behavior-card li:last-child {
    border-bottom: none;
  }

  /* Terminal Block */
  .terminal-block {
    margin: 28px 0;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s;
  }

  .terminal-block:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }

  .terminal-block.warning {
    border-left-color: var(--warning);
    border-left-width: 3px;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: var(--space-sm) 12px;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border);
  }

  .terminal-dots {
    display: flex;
    gap: 6px;
  }

  .terminal-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    transition: transform 0.2s;
  }

  .terminal-block:hover .terminal-dots span {
    transform: scale(1.2);
  }

  .terminal-dots span:nth-child(1) { background: #ef4444; }
  .terminal-dots span:nth-child(2) { background: #eab308; }
  .terminal-dots span:nth-child(3) { background: #22c55e; }

  .terminal-header span:last-child {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  .terminal-body {
    padding: 20px;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }

  .terminal-line {
    margin-bottom: 12px;
  }

  .prompt {
    color: var(--accent);
    margin-right: var(--space-sm);
  }

  .cmd {
    color: var(--accent-2);
    font-weight: var(--font-semibold);
  }

  .terminal-output {
    margin-top: var(--space-md);
  }

  .violation-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) 10px;
    margin: var(--space-sm) 0;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    transition: all 0.2s;
  }

  .violation-item:hover {
    transform: translateX(4px);
    background: var(--bg-secondary);
  }

  .violation-item :global(svg) {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .violation-item.critical {
    color: var(--error);
  }

  .violation-item.high {
    color: var(--warning);
  }

  .violation-item.medium {
    color: var(--info);
  }

  /* Report Methods */
  .report-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin: 32px 0;
  }

  .report-card {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 20px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .report-card::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, var(--accent-3), var(--accent-2));
    opacity: 0;
    z-index: 0;
    border-radius: var(--radius-lg);
    transition: opacity 0.3s;
  }

  .report-card:hover {
    transform: translateY(-4px);
    border-color: transparent;
    box-shadow: 0 12px 32px var(--accent-3-glow);
  }

  .report-card:hover::before {
    opacity: 1;
  }

  .report-card > * {
    position: relative;
    z-index: 1;
  }

  .report-card :global(svg) {
    width: 32px;
    height: 32px;
    padding: 7px;

---
import LegalLayout from '../../layouts/LegalLayout.astro';
import { siteConfig } from '../../content/global/site.config';
import { pricingConfig } from '../../content/pages/membership/pricing.config';
import { Icon } from 'astro-icon/components';

const lastUpdated = "Feb 9, 2026";
const effectiveDate = "Feb 9, 2026";

const membershipTiers = ['community', 'professional', 'enterprise']
  .map((id) => pricingConfig.tiers.find((tier) => tier.id === id))
  .filter(Boolean);

const getTierClass = (id: string) => {
  if (id === 'community') return 'free';
  if (id === 'professional') return 'pro';
  return 'enterprise';
};

const getTierPrice = (tier: any) => {
  if (!tier?.pricing) return { value: 'N/A', period: '' };

  if (tier.pricing.type === 'free') {
    return {
      value: tier.pricing.amount ?? 'Free',
      period: tier.pricing.period ? `/${tier.pricing.period}` : ''
    };
  }

  if (tier.pricing.type === 'custom') {
    return { value: tier.pricing.amount ?? 'Custom', period: '' };
  }

  const cycle = tier.pricing.monthly ?? tier.pricing.annual;
  const period = tier.pricing.monthly
    ? tier.pricing.period?.monthly ?? '/month'
    : tier.pricing.period?.annual ?? '/year';

  return {
    value: `${tier.pricing.currency ?? '$'}${cycle?.price ?? ''}`,
    period
  };
};
---

<LegalLayout
  title="Terms of Service"
  description="Clear, fair terms for developers"
  lastUpdated={lastUpdated}
  effectiveDate={effectiveDate}
  version="2.1"
  category="terms"
  relatedDocs={[
    { title: "Privacy Policy", href: "/legal/privacy", icon: "lucide:shield" },
    { title: "Code of Conduct", href: "/legal/conduct", icon: "lucide:users" },
    { title: "Contact Support", href: "/support/contact", icon: "lucide:mail" }
  ]}
>
  <!-- Summary Terminal -->
  <div class="terminal-block animate-in">
    <div class="terminal-header">
      <div class="terminal-dots">
        <span></span><span></span><span></span>
      </div>
      <span class="terminal-tab active"><Icon name="lucide:terminal" /> terms.summary</span>
      <span class="terminal-tab"><Icon name="lucide:file-code" /> changelog</span>
    </div>
    <div class="terminal-body">
      <div class="terminal-line"><span class="prompt">❯</span> <span class="cmd">cat</span> <span class="arg">key_points.md</span></div>
      <div class="terminal-output">
        <div class="output-item" style="--delay: 0">
          <Icon name="lucide:check" /> <span>30-day money-back guarantee</span>
        </div>
        <div class="output-item" style="--delay: 1">
          <Icon name="lucide:check" /> <span>Cancel anytime, no questions asked</span>
        </div>
        <div class="output-item" style="--delay: 2">
          <Icon name="lucide:check" /> <span>Your content stays yours</span>
        </div>
        <div class="output-item" style="--delay: 3">
          <Icon name="lucide:check" /> <span>Fair, transparent pricing</span>
        </div>
      </div>
      <div class="terminal-line cursor"><span class="prompt">❯</span> <span class="blink">_</span></div>
    </div>
  </div>

  <h2>1. Agreement</h2>
  <p>
    By using IAWD services, you agree to these terms. Simple as that. We're committed to transparency and fairness.
  </p>

  <!-- Data Grid -->
  <div class="data-grid">
    <div class="grid-item" style="--i:0">
      <div class="grid-icon-wrap">
        <Icon name="lucide:users" />
        <div class="grid-icon-ring"></div>
      </div>
      <strong>Who</strong>
      <span>Developers worldwide</span>
    </div>
    <div class="grid-item" style="--i:1">
      <div class="grid-icon-wrap">
        <Icon name="lucide:globe" />
        <div class="grid-icon-ring"></div>
      </div>
      <strong>Where</strong>
      <span>Any location</span>
    </div>
    <div class="grid-item" style="--i:2">
      <div class="grid-icon-wrap">
        <Icon name="lucide:calendar" />
        <div class="grid-icon-ring"></div>
      </div>
      <strong>When</strong>
      <span>Effective immediately</span>
    </div>
    <div class="grid-item" style="--i:3">
      <div class="grid-icon-wrap">
        <Icon name="lucide:shield-check" />
        <div class="grid-icon-ring"></div>
      </div>
      <strong>Binding</strong>
      <span>On acceptance</span>
    </div>
  </div>

  <h2>2. Account & Membership</h2>
  
  <h3>2.1 Registration</h3>
  <p>Create an account with accurate info. Keep it current. Pretty standard stuff.</p>
  
  <div class="requirements-grid">
    <div class="req-card" style="--i:0">
      <div class="req-number">01</div>
      <div class="req-icon">
        <Icon name="lucide:check-circle" />
      </div>
      <strong>Accurate Info</strong>
      <span>Provide truthful details during signup</span>
    </div>
    <div class="req-card" style="--i:1">
      <div class="req-number">02</div>
      <div class="req-icon">
        <Icon name="lucide:lock" />
      </div>
      <strong>Secure Password</strong>
      <span>Use a strong, unique password</span>
    </div>
    <div class="req-card" style="--i:2">
      <div class="req-number">03</div>
      <div class="req-icon">
        <Icon name="lucide:user-check" />
      </div>
      <strong>Age Requirement</strong>
      <span>Must be 18+ or have parental consent</span>
    </div>
  </div>

  <h3>2.2 Membership Tiers</h3>
  
  <!-- Pricing Matrix -->
  <div class="pricing-matrix">
    {membershipTiers.map((tier) => {
      const price = getTierPrice(tier);
      return (
        <div class={`matrix-tier ${tier.featured ? 'popular' : ''}`}>
          <div class="tier-header-bar"></div>
          {tier.featured && (
            <div class="popular-tag"><Icon name="lucide:star" /> Most Popular</div>
          )}
          <div class={`tier-badge ${getTierClass(tier.id)}`}>{tier.name}</div>
          <div class="tier-price">
            {price.value}
            {price.period && <span>{price.period}</span>}
          </div>
          <div class="tier-desc">{tier.tagline}</div>
          <ul class="tier-features">
            {tier.features
              .filter((feature) => feature.included)
              .slice(0, 4)
              .map((feature) => (
                <li><Icon name="lucide:check" /> {feature.text}</li>
              ))}
          </ul>
        </div>
      );
    })}
  </div>

  <h2>3. Payment & Billing</h2>
  
  <h3>3.1 Subscription Fees</h3>
  <p>Charged in advance. Monthly or annual billing. All prices in USD.</p>

  <h3>3.2 Refund Policy</h3>
  
  <div class="refund-guarantee">
    <div class="guarantee-badge">
      <Icon name="lucide:gift" />
      <div class="badge-pulse"></div>
    </div>
    <div class="guarantee-content">
      <div class="guarantee-header">
        <strong>30-Day Money-Back Guarantee</strong>
        <span class="guarantee-tag">Risk-Free</span>
      </div>
      <p>Try any paid plan risk-free. Not satisfied? Full refund, no questions asked. After 30 days, fees are non-refundable except as required by law.</p>
    </div>
  </div>

  <h3>3.3 Cancellation</h3>
  <p>Cancel anytime from settings. Access continues until end of billing period. No partial refunds for mid-cycle cancellations.</p>

  <h2>4. User Conduct</h2>
  
  <p>Be professional. Be respectful. Don't be a jerk. Here's what's not allowed:</p>

  <!-- Dual Column List -->
  <div class="dual-column-list">
    <div class="column prohibited">
      <div class="column-header">
        <div class="column-icon-wrap danger">
          <Icon name="lucide:x-circle" />
        </div>
        <span>Prohibited</span>
      </div>
      <ul>
        <li><span class="li-marker"></span>Harassment or abuse</li>
        <li><span class="li-marker"></span>Spam or unauthorized ads</li>
        <li><span class="li-marker"></span>False information</li>
        <li><span class="li-marker"></span>Malware or harmful code</li>
        <li><span class="li-marker"></span>Unauthorized access attempts</li>
      </ul>
    </div>
    <div class="column consequences">
      <div class="column-header">
        <div class="column-icon-wrap warn">
          <Icon name="lucide:alert-triangle" />
        </div>
        <span>Consequences</span>
      </div>
      <ul>
        <li><span class="li-marker"></span>First offense: Warning</li>
        <li><span class="li-marker"></span>Repeated: Suspension</li>
        <li><span class="li-marker"></span>Severe: Permanent ban</li>
        <li><span class="li-marker"></span>Illegal: Legal action</li>
        <li><span class="li-marker"></span>No refunds for violations</li>
      </ul>
    </div>
  </div>

  <h2>5. Content & IP</h2>
  
  <h3>5.1 Our Content</h3>
  <p>All courses, materials, and content are protected by copyright. You get a license to use, not to redistribute.</p>

  <h3>5.2 Your Content</h3>
  
  <!-- Info Cards Row -->
  <div class="info-cards">
    <div class="info-card">
      <div class="info-card-glow"></div>
      <Icon name="lucide:user" />
      <strong>You Own It</strong>
      <p>You retain full ownership of content you create</p>
    </div>
    <div class="info-card">
      <div class="info-card-glow"></div>
      <Icon name="lucide:share-2" />
      <strong>We Can Use It</strong>
      <p>You grant us license to display/distribute on platform</p>
    </div>
    <div class="info-card">
      <div class="info-card-glow"></div>
      <Icon name="lucide:award" />
      <strong>Give Credit</strong>
      <p>Always attribute work to original creators</p>
    </div>
  </div>

  <h2>6. Disclaimers</h2>
  
  <!-- Warning Terminal -->
  <div class="terminal-block warning">
    <div class="terminal-header">
      <div class="terminal-dots">
        <span></span><span></span><span></span>
      </div>
      <span class="terminal-tab active"><Icon name="lucide:alert-triangle" /> disclaimers.log</span>
    </div>
    <div class="terminal-body">
      <div class="terminal-output">
        <div class="output-warn" style="--delay: 0">
          <Icon name="lucide:alert-triangle" /> <span>Services provided "AS IS" without warranties</span>
        </div>
        <div class="output-warn" style="--delay: 1">
          <Icon name="lucide:info" /> <span>We don't guarantee specific outcomes or results</span>
        </div>
        <div class="output-warn" style="--delay: 2">
          <Icon name="lucide:shield" /> <span>Educational purposes only — no employment guarantees</span>
        </div>
      </div>
    </div>
  </div>

  <h2>7. Limitation of Liability</h2>
  <p>
    We're not liable for indirect damages, lost profits, or consequential losses. Our total liability is limited to what you paid us in the last 12 months, or $100, whichever is greater.
  </p>

  <h2>8. Termination</h2>
  
  <div class="stats-row">
    <div class="stat-box" style="--i:0">
      <div class="stat-ring">
        <div class="stat-ring-inner"></div>
      </div>
      <div class="stat-value">24h</div>
      <div class="stat-label">Account deletion</div>
    </div>
    <div class="stat-box" style="--i:1">
      <div class="stat-ring">
        <div class="stat-ring-inner"></div>
      </div>
      <div class="stat-value">30d</div>
      <div class="stat-label">Data retention</div>
    </div>
    <div class="stat-box" style="--i:2">
      <div class="stat-ring">
        <div class="stat-ring-inner"></div>
      </div>
      <div class="stat-value">∞</div>
      <div class="stat-label">Rejoin anytime</div>
    </div>
  </div>

  <h2>9. Changes to Terms</h2>
  <p>
    We may update these terms. We'll notify you via email and give you time to review changes before they take effect.
  </p>

  <h2>10. Governing Law</h2>
  <p>
    These terms are governed by California law, USA. Disputes resolved through arbitration.
  </p>

  <h2>11. Contact</h2>
  
  <!-- Contact Matrix -->
  <div class="contact-matrix">
    <a href={`mailto:${siteConfig.email}`} class="contact-card">
      <div class="contact-icon-wrap">
        <Icon name="lucide:mail" />
      </div>
      <span>Email Us</span>
      <div class="contact-arrow"><Icon name="lucide:arrow-right" /></div>
    </a>
    <a href="/support/contact" class="contact-card">
      <div class="contact-icon-wrap">
        <Icon name="lucide:message-circle" />
      </div>
      <span>Support Form</span>
      <div class="contact-arrow"><Icon name="lucide:arrow-right" /></div>
    </a>
    <a href="/legal" class="contact-card">
      <div class="contact-icon-wrap">
        <Icon name="lucide:file-text" />
      </div>
      <span>Legal Hub</span>
      <div class="contact-arrow"><Icon name="lucide:arrow-right" /></div>
    </a>
  </div>

  <!-- Final CTA -->
  <div class="final-cta">
    <div class="final-cta-glow"></div>
    <div class="cta-main">
      <div class="cta-icon">
        <Icon name="lucide:check-circle-2" />
      </div>
      <div class="cta-text">
        <strong>By using IAWD, you agree to these terms.</strong>
        <span class="cta-meta">Updated {lastUpdated} · Effective {effectiveDate} · Version 2.1</span>
      </div>
    </div>
    <div class="cta-badge">
      <Icon name="lucide:shield-check" />
      <span>Agreed</span>
    </div>
  </div>
</LegalLayout>

<style>
  /* ===== ANIMATIONS ===== */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 20px currentColor; }
    50% { box-shadow: 0 0 30px currentColor, 0 0 40px currentColor; }
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @keyframes typewriter-reveal {
    from { opacity: 0; transform: translateX(-6px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes ring-spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes pulse-ring {
    0% { transform: scale(1); opacity: 0.4; }
    100% { transform: scale(1.8); opacity: 0; }
  }

  @keyframes float-subtle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
  }

  .animate-in {
    animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
  }

  /* ===== TERMINAL BLOCK ===== */
  .terminal-block {
    margin: 24px 0;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    font-family: var(--font-mono);
    position: relative;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
  }

  .terminal-block::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient);
    opacity: 0.6;
    overflow: hidden;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 0;
    padding: 0;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border);
    font-size: 11px;
    color: var(--text-muted);
  }

  .terminal-dots {
    display: flex;
    gap: var(--space-xs);
    padding: 10px 14px;
  }

  .terminal-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--border);
    transition: all 0.3s;
  }

  .terminal-block:hover .terminal-dots span:nth-child(1) { background: #ef4444; box-shadow: 0 0 6px #ef444480; }
  .terminal-block:hover .terminal-dots span:nth-child(2) { background: #eab308; box-shadow: 0 0 6px #eab30880; }
  .terminal-block:hover .terminal-dots span:nth-child(3) { background: #22c55e; box-shadow: 0 0 6px #22c55e80; }

  .terminal-tab {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 16px;
    font-size: 11px;
    font-family: var(--font-mono);
    color: var(--text-muted);
    border-right: 1px solid var(--border);
    cursor: default;
    transition: all 0.3s;
  }

  .terminal-tab :global(svg) {
    width: 12px;
    height: 12px;
  }

  .terminal-tab.active {
    background: var(--bg-secondary);
    color: var(--text);
    position: relative;
  }

  .terminal-tab.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--bg-secondary);
  }

  .terminal-body {
    padding: 16px 20px;
  }

  .terminal-line {
    font-size: 13px;
    color: var(--text-secondary);
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .terminal-line.cursor {
    margin-bottom: 0;
    margin-top: 12px;
    opacity: 0.5;
  }

  .prompt {
    color: var(--accent);
    font-weight: var(--font-bold);
  }

  .cmd {
    color: var(--accent-2);
    font-weight: var(--font-semibold);
  }

  .arg {
    color: var(--text-muted);
    font-style: italic;
  }

  .blink {
    color: var(--accent);
    animation: blink 1s step-end infinite;
    font-weight: var(--font-bold);
  }

  .terminal-output {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding-left: 20px;
    border-left: 2px solid var(--border);
    margin-left: 4px;
  }

  .output-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 13px;
    color: var(--text-secondary);
    animation: typewriter-reveal 0.5s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    animation-delay: calc(var(--delay, 0) * 0.12s + 0.3s);
  }

  .output-item :global(svg) {
    width: 16px;
    height: 16px;
    padding: 3px;
    background: var(--success-muted);
    border-radius: var(--radius-sm);
    color: var(--success);
    flex-shrink: 0;
  }

  .output-warn {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 13px;
    color: var(--warning);
    animation: typewriter-reveal 0.5s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    animation-delay: calc(var(--delay, 0) * 0.15s + 0.2s);
  }

  .output-warn :global(svg) {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .terminal-block.warning {
    border-color: color-mix(in srgb, var(--warning) 30%, var(--border));
  }

  .terminal-block.warning::before {
    background: linear-gradient(90deg, var(--warning), transparent);
  }

  /* ===== DATA GRID ===== */
  .data-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 12px;
    margin: 24px 0;
  }

  .grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding: 20px 12px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .grid-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--gradient);
    transform: scaleX(0);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    transform-origin: left;
  }

  .grid-item:hover::before {
    transform: scaleX(1);
  }

  .grid-item:hover {
    border-color: var(--accent);
    transform: translateY(-6px);
    box-shadow: 0 12px 32px var(--accent-glow);
  }

  .grid-icon-wrap {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .grid-icon-wrap :global(svg) {
    width: 28px;
    height: 28px;
    padding: 6px;
    background: var(--accent-muted);
    border-radius: var(--radius-md);
    color: var(--accent);
    position: relative;
    z-index: 1;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .grid-icon-ring {
    position: absolute;
    inset: -4px;
    border: 1.5px dashed var(--accent);
    border-radius: var(--radius-lg);
    opacity: 0;
    transition: opacity 0.4s;
    animation: ring-spin 12s linear infinite;
  }

  .grid-item:hover .grid-icon-ring {
    opacity: 0.4;
  }

  .grid-item:hover .grid-icon-wrap :global(svg) {
    background: var(--accent);
    color: var(--white);
    box-shadow: 0 4px 16px var(--accent-glow);
    transform: scale(1.1);
  }

  .grid-item strong {
    font-size: 11px;
    font-weight: var(--font-bold);
    color: var(--text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .grid-item span {
    font-size: 13px;
    color: var(--text-secondary);
  }

  /* ===== REQUIREMENTS GRID ===== */
  .requirements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin: 24px 0;
  }

  .req-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 24px 20px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    animation: fadeInUp 0.5s ease-out backwards;
    animation-delay: calc(var(--i) * 0.1s);
  }

  .req-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient);
    opacity: 0;
    transition: opacity 0.4s;
  }

  .req-card:hover {
    border-color: var(--accent);
    transform: translateY(-6px);
    box-shadow: 0 12px 32px var(--accent-glow);
  }

  .req-card:hover::before {
    opacity: 0.08;
  }

  .req-number {
    position: absolute;
    top: 12px;
    right: 12px;
    font-size: 11px;
    font-weight: var(--font-bold);
    color: var(--text-muted);
    background: var(--bg-primary);
    padding: 4px 10px;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);

---
import PageLayout from '../../layouts/PageLayout.astro';
import PageHero from '../../components/common/PageHero.astro';
import { Icon } from 'astro-icon/components';
import { teamMembers } from '../../content/global/team.config';
---

<PageLayout
  title="Leadership Team | IAWD"
  description="Meet the team behind IAWD - dedicated professionals committed to supporting web developers worldwide."
>
  <PageHero
    badge="Our Team"
    badgeIcon="lucide:users"
    title="Meet the people making"
    highlight="IAWD possible"
    subtitle="Our diverse team brings together expertise in education, community building, and software development to serve our global community."
  />

  <section class="team-section">
    <div class="container">
      <!-- Team Grid - Ultra Compact -->
      <div class="team-grid-nano">
        {teamMembers.map((member, index) => (
          <article class="team-card-nano reveal" style={`--delay: ${index * 0.05}s`}>
            <div class="card-glow-border"></div>
            
            <!-- Avatar with status -->
            <div class="member-avatar-wrap">
              <div class="avatar-ring"></div>
              <div class="member-avatar" style={`background: ${member.color}`}>
                {member.avatar}
              </div>
              {member.status && (
                <div class={`status-indicator status-${member.status}`}>
                  <span class="status-pulse"></span>
                </div>
              )}
            </div>

            <!-- Member Info -->
            <div class="member-info-compact">
              <h3 class="member-name">{member.name}</h3>
              <p class="member-role">{member.role}</p>
              {member.department && (
                <div class="member-dept">
                  <Icon name="lucide:briefcase" />
                  <span>{member.department}</span>
                </div>
              )}
            </div>

            <!-- Bio (compact) -->
            {member.bio && (
              <p class="member-bio-nano">{member.bio}</p>
            )}

            <!-- Contact -->
            {member.email && (
              <a href={`mailto:${member.email}`} class="member-email-btn">
                <Icon name="lucide:mail" />
                <span>Contact</span>
              </a>
            )}
          </article>
        ))}
      </div>

      <!-- Join Team CTA - Nano -->
      <div class="join-team-nano reveal" style="--delay: 0.4s">
        <div class="join-glow"></div>
        <div class="join-icon-wrap">
          <div class="icon-pulse-ring"></div>
          <Icon name="lucide:sparkles" />
        </div>
        <h2>Join Our Mission</h2>
        <p>Passionate about empowering developers? Help us build the world's best dev community.</p>
        <a href="/support/contact" class="join-btn">
          <Icon name="lucide:send" />
          <span>Get in Touch</span>
          <div class="btn-shine"></div>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  function initReveal() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.reveal').forEach((item) => observer.observe(item));
  }

  document.addEventListener('DOMContentLoaded', () => {
    initReveal();
  });
</script>

<style>
  /* ===== TEAM SECTION ===== */
  .team-section {
    padding: 2rem 0 4rem;
  }

  /* ===== TEAM GRID - ULTRA COMPACT ===== */
  .team-grid-nano {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 0.85rem;
    margin-bottom: 2.5rem;
  }

  .team-card-nano {
    position: relative;
    padding: 1rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.12);
    border-radius: 12px;
    text-align: center;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .card-glow-border {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(var(--cyan-400-rgb), 0.3),
      rgba(var(--accent-rgb), 0.3),
      transparent
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .team-card-nano:hover .card-glow-border {
    opacity: 1;
  }

  .team-card-nano:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-6px) scale(1.02);
    box-shadow: 
      0 20px 40px rgba(var(--black-rgb), 0.3),
      0 0 60px rgba(var(--accent-rgb), 0.1);
  }

  /* Avatar */
  .member-avatar-wrap {
    position: relative;
    width: 70px;
    height: 70px;
    margin: 0 auto 0.9rem;
  }

  .avatar-ring {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      var(--accent),
      var(--cyan-400),
      var(--accent-2),
      var(--accent)
    );
    opacity: 0;
    animation: ringRotate 4s linear infinite;
    transition: opacity 0.5s ease;
  }

  .team-card-nano:hover .avatar-ring {
    opacity: 0.6;
  }

  @keyframes ringRotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .member-avatar {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.4rem;
    font-weight: 700;
    color: white;
    z-index: 1;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .team-card-nano:hover .member-avatar {
    transform: scale(1.08);
  }

  /* Status Indicator */
  .status-indicator {
    position: absolute;
    bottom: 2px;
    right: 2px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid rgba(var(--bg-rgb), 1);
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .status-pulse {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: statusPulse 2s ease-in-out infinite;
  }

  .status-online .status-pulse {
    background: var(--green-500-light);
    box-shadow: 0 0 8px var(--green-500-light);
  }

  .status-away .status-pulse {
    background: var(--amber-400);
    box-shadow: 0 0 8px var(--amber-400);
  }

  .status-offline .status-pulse {
    background: var(--zinc-400);
  }

  @keyframes statusPulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Member Info */
  .member-info-compact {
    margin-bottom: 0.7rem;
  }

  .member-name {
    margin: 0 0 0.25rem;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.02em;
  }

  .member-role {
    margin: 0 0 0.4rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--accent);
  }

  .member-dept {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.6rem;
    border-radius: 100px;
    background: rgba(var(--cyan-400-rgb), 0.08);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.15);
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .member-dept :global(svg) {
    width: 10px;
    height: 10px;
  }

  /* Bio */
  .member-bio-nano {
    margin: 0 0 0.8rem;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--text-secondary);
    text-align: left;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Email Button */
  .member-email-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.9rem;
    border-radius: 8px;
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(6px);
    color: var(--text);
    font-size: 0.75rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .member-email-btn :global(svg) {
    width: 12px;
    height: 12px;
  }

  .member-email-btn:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.4);
    background: rgba(var(--surface-875-rgb), 0.8);
    color: var(--accent);
    transform: translateY(-2px);
  }

  /* ===== JOIN TEAM CTA - NANO ===== */
  .join-team-nano {
    position: relative;
    text-align: center;
    padding: 2rem 1.5rem;
    margin-top: 2rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    border-radius: 16px;
    overflow: hidden;
  }

  .join-glow {
    position: absolute;
    inset: -80px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.2) 0%,
      transparent 60%
    );
    opacity: 0.7;
    animation: joinGlow 6s ease-in-out infinite;
  }

  @keyframes joinGlow {
    0%, 100% {
      opacity: 0.7;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.15);
    }
  }

  .join-icon-wrap {
    position: relative;
    width: 50px;
    height: 50px;
    margin: 0 auto 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
  }

  .icon-pulse-ring {
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    border: 2px solid rgba(var(--accent-rgb), 0.3);
    animation: iconPulseRing 3s ease-in-out infinite;
  }

  @keyframes iconPulseRing {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.3);
      opacity: 0;
    }
  }

  .join-icon-wrap :global(svg) {
    width: 28px;
    height: 28px;
    position: relative;
    z-index: 1;
    filter: drop-shadow(0 0 16px rgba(var(--accent-rgb), 0.5));
  }

  .join-team-nano h2 {
    margin: 0 0 0.6rem;
    font-size: 1.6rem;
    font-family: var(--font-display);
    color: var(--text);
    letter-spacing: -0.02em;
    position: relative;
    z-index: 1;
  }

  .join-team-nano p {
    margin: 0 auto 1.3rem;
    max-width: 480px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    position: relative;
    z-index: 1;
  }

  .join-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.4rem;
    border-radius: 10px;
    background: var(--gradient);
    color: var(--white);
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    box-shadow: 0 10px 24px rgba(var(--accent-rgb), 0.3);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    z-index: 1;
  }

  .join-btn :global(svg) {
    width: 16px;
    height: 16px;
  }

  .btn-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(255, 255, 255, 0.25),
      transparent
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .join-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 14px 32px rgba(var(--accent-rgb), 0.4);
  }

  .join-btn:hover .btn-shine {
    opacity: 1;
  }

  /* ===== REVEAL ANIMATION ===== */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease var(--delay, 0s), transform 0.6s ease var(--delay, 0s);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 980px) {
    .team-grid-nano {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .team-grid-nano {
      grid-template-columns: 1fr 1fr;
      gap: 0.7rem;
    }

    .team-card-nano {
      padding: 0.85rem;
    }

    .member-avatar-wrap {
      width: 60px;
      height: 60px;
    }

    .member-avatar {
      font-size: 1.2rem;
    }

    .member-name {
      font-size: 0.95rem;
    }

    .member-bio-nano {
      font-size: 0.7rem;
    }
  }

  @media (max-width: 480px) {
    .team-grid-nano {
      grid-template-columns: 1fr;
    }

    .join-team-nano {
      padding: 1.5rem 1rem;
    }

    .join-team-nano h2 {
      font-size: 1.3rem;
    }

    .join-team-nano p {
      font-size: 0.85rem;
    }
  }

  /* ===== REDUCED MOTION ===== */
  @media (prefers-reduced-motion: reduce) {
    .avatar-ring,
    .icon-pulse-ring,
    .join-glow,
    .status-pulse {
      animation: none;
    }
  }
</style>
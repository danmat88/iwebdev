    margin: 2rem auto 0;
    display: flex;
    gap: 0.7rem;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 900px;
  }

  .stat-pill {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.65rem;
    padding: 0.7rem 1rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.15);
    border-radius: 100px;
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    animation: pillReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0s);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes pillReveal {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .stat-pill:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.4);
    background: rgba(var(--surface-875-rgb), 0.7);
    transform: translateY(-3px);
  }

  .pill-glow {
    position: absolute;
    inset: -1px;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(135deg, var(--accent), var(--cyan-400));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .stat-pill:hover .pill-glow {
    opacity: 0.5;
  }

  .pill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 10px;
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
    flex-shrink: 0;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .pill-icon :global(svg) {
    width: 16px;
    height: 16px;
  }

  .stat-pill:hover .pill-icon {
    background: rgba(var(--accent-rgb), 0.2);
    transform: rotate(-8deg) scale(1.1);
  }

  .pill-content {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .pill-value {
    font-family: var(--font-display);
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--text);
    line-height: 1;
  }

  .pill-label {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1;
  }

  .mission-section {
    padding: 3.5rem 0;
  }

  .mission-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .mission-nano {
    position: relative;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    padding: 0.9rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .mission-nano::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(135deg, transparent, rgba(var(--cyan-400-rgb), 0.2), transparent);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .mission-nano:hover::before {
    opacity: 1;
  }

  .mission-nano:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-4px);
  }

  .nano-header {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 0.6rem;
  }

  .nano-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nano-icon :global(svg) {
    width: 16px;
    height: 16px;
  }


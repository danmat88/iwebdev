    padding: 3.5rem 0;
    background: linear-gradient(180deg, transparent, rgba(var(--surface-900-rgb), 0.4), transparent);
  }

  .section-header-nano {
    text-align: center;
    margin-bottom: 2rem;
  }

  .nano-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.35rem 0.75rem;
    border-radius: 100px;
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(8px);
    color: var(--text-muted);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.6rem;
  }


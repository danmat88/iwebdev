  }

  .node-content {
    width: calc(50% - 2rem);
    padding: 0.8rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 10px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .node-content:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.7);
    transform: scale(1.02);
  }

  .node-year {
    color: var(--accent);
    font-weight: 700;
    font-size: 0.75rem;
    margin-bottom: 0.2rem;
    font-family: var(--font-mono);
  }

  .node-title {

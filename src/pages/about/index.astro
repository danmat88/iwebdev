    font-family: var(--font-display);
    color: var(--text);
    letter-spacing: -0.03em;
  }

  .timeline-nano {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 1.5rem 0;
  }

  .timeline-track {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;

    height: 12px;
    border-radius: 50%;
    background: var(--accent);
    box-shadow: 0 0 0 4px rgba(var(--accent-rgb), 0.2);
    z-index: 2;
    animation: nodePulse 3s ease-in-out infinite;
    animation-delay: calc(var(--index, 0) * 0.3s);
  }


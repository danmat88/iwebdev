---
import PageLayout from '../../layouts/PageLayout.astro';
import PageHero from '../../components/common/PageHero.astro';
import { Icon } from 'astro-icon/components';
import { globalStats } from '../../content/global/stats.config';
import { globalLocations } from '../../content/global/locations.config';
---

<PageLayout
  title="Community | IAWD"
  description="Connect with developers worldwide. Join local chapters, attend events, and be part of a supportive global community."
>
  <PageHero
    badge="Community"
    badgeIcon="lucide:globe"
    title="Connect with developers"
    highlight="around the world"
    subtitle={`Join ${globalStats.members.display} members across ${globalStats.countries.display} countries. Our community is active 24/7 on forums, Slack, and in local chapters.`}
  />

  <section class="community-nano">
    <div class="container">
      <div class="features-nano-grid">
        <article class="feature-nano reveal">
          <div class="feature-glow"></div>
          <div class="feature-icon-wrap">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:message-circle" />
          </div>
          <h3>Forums</h3>
          <p>24/7 discussions on dev, career, tech help.</p>
          <a href="#forums" class="feature-link">
            <span>Join</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="feature-nano reveal" style="--delay: 0.05s">
          <div class="feature-glow"></div>
          <div class="feature-icon-wrap">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:hash" />
          </div>
          <h3>Slack</h3>
          <p>Real-time chat. 5,000+ devs. Instant help.</p>
          <a href="#slack" class="feature-link">
            <span>Join</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="feature-nano reveal" style="--delay: 0.1s">
          <div class="feature-glow"></div>
          <div class="feature-icon-wrap">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:map-pin" />
          </div>
          <h3>Chapters</h3>
          <p>In-person meetups in 45+ cities globally.</p>
          <a href="#chapters" class="feature-link">
            <span>Find</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="feature-nano reveal" style="--delay: 0.15s">
          <div class="feature-glow"></div>
          <div class="feature-icon-wrap">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:users" />
          </div>
          <h3>Study Groups</h3>
          <p>Learn together. 20+ active topic groups.</p>
          <a href="#study" class="feature-link">
            <span>Join</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="feature-nano reveal" style="--delay: 0.2s">
          <div class="feature-glow"></div>
          <div class="feature-icon-wrap">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:calendar" />
          </div>
          <h3>Summit</h3>
          <p>3-day conference. Talks, workshops, networking.</p>
          <a href="/training/events" class="feature-link">
            <span>Learn More</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="feature-nano reveal" style="--delay: 0.25s">
          <div class="feature-glow"></div>
          <div class="feature-icon-wrap">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:handshake" />
          </div>
          <h3>Mentorship</h3>
          <p>1-on-1 guidance from experienced devs.</p>
          <a href="#mentorship" class="feature-link">
            <span>Get Matched</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>
      </div>
    </div>
  </section>

  <section class="global-nano">
    <div class="container">
      <div class="section-header-nano reveal">
        <h2>Global Network</h2>
        <p>Active in {globalStats.countries.display} countries â€¢ 24/7 worldwide</p>
      </div>

      <div class="locations-nano-grid">
        {globalLocations.slice(0, 12).map((location, i) => (
          <article class="location-nano reveal" style={`--delay: ${i * 0.04}s`}>
            <div class="location-glow"></div>
            <div class="location-flag-nano">{location.flag}</div>
            <div class="location-data">
              <h4>{location.city}</h4>
              <span class="member-count">{location.members} members</span>
              {location.onlineNow && (
                <span class="online-indicator">
                  <span class="pulse-nano"></span>
                  {location.onlineNow} online
                </span>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-nano-section">
    <div class="container">
      <div class="cta-nano-card reveal">
        <div class="cta-orb"></div>
        <h2>Join the Movement</h2>
        <p>Most supportive dev community in the world. Your people are here.</p>
        <div class="cta-actions-nano">
          <a href="/membership/join" class="btn-nano btn-primary">
            <Icon name="lucide:rocket" />
            <span>Get Started</span>
            <div class="btn-shine"></div>
          </a>
          <a href="/about" class="btn-nano btn-secondary">
            <Icon name="lucide:info" />
            <span>Learn More</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  function initReveal() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.reveal').forEach((item) => observer.observe(item));
  }

  document.addEventListener('DOMContentLoaded', initReveal);
</script>

<style>
  .community-nano {
    padding: 3rem 0;
  }

  .features-nano-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.7rem;
  }

  .feature-nano {
    position: relative;
    padding: 1rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    text-align: center;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .feature-glow {
    position: absolute;
    inset: -60px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.15) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .feature-nano:hover .feature-glow {
    opacity: 1;
  }

  .feature-nano:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-6px) scale(1.02);
  }

  .feature-icon-wrap {
    position: relative;
    width: 50px;
    height: 50px;
    margin: 0 auto 0.7rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
  }

  .icon-pulse-ring {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid rgba(var(--accent-rgb), 0.2);
    animation: iconPulse 3s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0;
    }
  }

  .feature-icon-wrap :global(svg) {
    width: 28px;
    height: 28px;
    position: relative;
    z-index: 1;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    filter: drop-shadow(0 0 12px rgba(var(--accent-rgb), 0.3));
  }

  .feature-nano:hover .feature-icon-wrap :global(svg) {
    transform: scale(1.15) rotate(-8deg);
  }

  .feature-nano h3 {
    margin: 0 0 0.4rem;
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.01em;
  }

  .feature-nano p {
    margin: 0 0 0.8rem;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .feature-link {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.4rem 0.8rem;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.1);
    border: 1px solid rgba(var(--accent-rgb), 0.2);
    color: var(--accent);
    font-size: 0.7rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .feature-link :global(svg) {
    width: 12px;
    height: 12px;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .feature-link:hover {
    background: rgba(var(--accent-rgb), 0.2);
    border-color: rgba(var(--accent-rgb), 0.4);
    transform: translateX(4px);
  }

  .feature-link:hover :global(svg) {
    transform: translateX(3px);
  }

  .global-nano {
    padding: 3rem 0;
    background: linear-gradient(180deg, transparent, rgba(var(--surface-900-rgb), 0.4), transparent);
  }

  .section-header-nano {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .section-header-nano h2 {
    margin: 0 0 0.4rem;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-family: var(--font-display);
    color: var(--text);
    letter-spacing: -0.03em;
  }

  .section-header-nano p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .locations-nano-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.65rem;
  }

  .location-nano {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.7rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 10px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .location-glow {
    position: absolute;
    inset: -40px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.12) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .location-nano:hover .location-glow {
    opacity: 1;
  }

  .location-nano:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-3px);
  }

  .location-flag-nano {
    font-size: 1.8rem;
    line-height: 1;
    flex-shrink: 0;
  }

  .location-data {
    flex: 1;
    min-width: 0;
  }

  .location-data h4 {
    margin: 0 0 0.15rem;
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .member-count {
    display: block;
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  .online-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    margin-top: 0.25rem;
    padding: 0.2rem 0.5rem;
    border-radius: 100px;
    background: rgba(var(--green-500-light-rgb), 0.1);
    border: 1px solid rgba(var(--green-500-light-rgb), 0.2);
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--green-500-light);
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .pulse-nano {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--green-500-light);
    box-shadow: 0 0 8px var(--green-500-light);
    animation: pulseNano 2s ease-in-out infinite;
  }

  @keyframes pulseNano {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.3);
    }
  }

  .cta-nano-section {
    padding: 3rem 0;
  }

  .cta-nano-card {
    position: relative;
    max-width: 650px;
    margin: 0 auto;
    text-align: center;
    padding: 2rem 1.5rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    border-radius: 16px;
    overflow: hidden;
  }

  .cta-orb {
    position: absolute;
    inset: -80px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.18) 0%,
      transparent 60%
    );
    opacity: 0.8;
    animation: orbPulse 6s ease-in-out infinite;
  }

  @keyframes orbPulse {
    0%, 100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  .cta-nano-card h2 {
    position: relative;
    margin: 0 0 0.6rem;
    font-size: 1.6rem;
    font-family: var(--font-display);
    color: var(--text);
    letter-spacing: -0.02em;
    z-index: 1;
  }

  .cta-nano-card p {
    position: relative;
    margin: 0 0 1.4rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    z-index: 1;
  }

  .cta-actions-nano {
    position: relative;
    display: flex;
    gap: 0.7rem;
    justify-content: center;
    flex-wrap: wrap;
    z-index: 1;
  }

  .btn-nano {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.7rem 1.3rem;
    border-radius: 10px;
    font-size: 0.85rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .btn-nano :global(svg) {
    width: 15px;
    height: 15px;
  }

  .btn-primary {
    background: var(--gradient);
    color: var(--white);
    box-shadow: 0 8px 20px rgba(var(--accent-rgb), 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 28px rgba(var(--accent-rgb), 0.4);
  }

  .btn-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(255, 255, 255, 0.25),
      transparent
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .btn-primary:hover .btn-shine {
    opacity: 1;
  }

  .btn-secondary {
    border: 1px solid rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(8px);
    color: var(--text);
  }

  .btn-secondary:hover {
    transform: translateY(-3px);
    border-color: rgba(var(--cyan-400-rgb), 0.5);
    background: rgba(var(--surface-875-rgb), 0.7);
  }

  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease var(--delay, 0s), transform 0.6s ease var(--delay, 0s);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 980px) {
    .features-nano-grid {
      grid-template-columns: 1fr 1fr;
    }

    .locations-nano-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .features-nano-grid,
    .locations-nano-grid {
      grid-template-columns: 1fr;
    }

    .location-nano {
      justify-content: flex-start;
    }

    .cta-nano-card {
      padding: 1.5rem 1rem;
    }

    .cta-nano-card h2 {
      font-size: 1.3rem;
    }

    .cta-actions-nano {
      flex-direction: column;
    }

    .btn-nano {
      width: 100%;
      justify-content: center;
    }
  }
</style>
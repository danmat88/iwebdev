---
import PageLayout from '../../layouts/PageLayout.astro';
import PageHero from '../../components/common/PageHero.astro';
import { Icon } from 'astro-icon/components';
import { globalStats } from '../../content/global/stats.config';
---

<PageLayout
  title="Certifications | IAWD Training"
  description="Earn recognized certifications to validate your web development skills and advance your career."
>
  <PageHero
    badge="Certifications"
    badgeIcon="lucide:award"
    title="Validate your skills,"
    highlight="advance your career"
    subtitle={`Earn industry-recognized certifications across ${globalStats.certifications} tracks. Stand out to employers and prove your expertise.`}
  />

  <section class="cert-tracks-nano">
    <div class="container">
      <h2 class="section-title-nano">Certification Tracks</h2>
      <div class="tracks-nano-grid">
        <article class="track-nano-card reveal">
          <div class="track-glow"></div>
          <div class="track-icon-nano">
            <Icon name="lucide:layout" />
          </div>
          <h3>Frontend Development</h3>
          <div class="track-badge-nano professional">Professional</div>
          <p>Master HTML, CSS, JavaScript, React, and modern frontend frameworks.</p>
          <ul class="track-skills-nano">
            <li>Responsive Design</li>
            <li>React & Vue</li>
            <li>TypeScript</li>
            <li>State Management</li>
          </ul>
          <div class="track-meta-nano">
            <span><Icon name="lucide:clock" /> 40 hours</span>
            <span><Icon name="lucide:award" /> Certificate</span>
          </div>
          <a href="#enroll" class="track-cta-nano">
            <span>View Track</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="track-nano-card featured reveal" style="--delay: 0.05s">
          <div class="featured-burst"></div>
          <div class="track-glow"></div>
          <div class="featured-badge-nano">Most Popular</div>
          <div class="track-icon-nano">
            <Icon name="lucide:layers" />
          </div>
          <h3>Full Stack Development</h3>
          <div class="track-badge-nano advanced">Advanced</div>
          <p>Build complete web applications from frontend to database and deployment.</p>
          <ul class="track-skills-nano">
            <li>Frontend & Backend</li>
            <li>Databases</li>
            <li>APIs & Authentication</li>
            <li>DevOps Basics</li>
          </ul>
          <div class="track-meta-nano">
            <span><Icon name="lucide:clock" /> 60 hours</span>
            <span><Icon name="lucide:award" /> Certificate</span>
          </div>
          <a href="#enroll" class="track-cta-nano">
            <span>View Track</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>

        <article class="track-nano-card reveal" style="--delay: 0.1s">
          <div class="track-glow"></div>
          <div class="track-icon-nano">
            <Icon name="lucide:server" />
          </div>
          <h3>Backend Development</h3>
          <div class="track-badge-nano professional">Professional</div>
          <p>Build robust server-side applications with Node.js, databases, and APIs.</p>
          <ul class="track-skills-nano">
            <li>Node.js & Express</li>
            <li>Database Design</li>
            <li>RESTful APIs</li>
            <li>Security</li>
          </ul>
          <div class="track-meta-nano">
            <span><Icon name="lucide:clock" /> 45 hours</span>
            <span><Icon name="lucide:award" /> Certificate</span>
          </div>
          <a href="#enroll" class="track-cta-nano">
            <span>View Track</span>
            <Icon name="lucide:arrow-right" />
          </a>
        </article>
      </div>

      <div class="all-tracks-nano reveal" style="--delay: 0.15s">
        <a href="#all">
          <span>View All {globalStats.certifications} Certification Tracks</span>
          <Icon name="lucide:arrow-right" />
        </a>
      </div>
    </div>
  </section>

  <section class="cert-benefits-nano">
    <div class="container">
      <h2 class="section-title-nano">Why Get Certified?</h2>
      <div class="benefits-nano-grid">
        <article class="benefit-nano-card reveal">
          <div class="benefit-glow"></div>
          <div class="benefit-icon-nano">
            <Icon name="lucide:briefcase" />
          </div>
          <h3>Career Advancement</h3>
          <p>Stand out to employers and increase your earning potential with recognized credentials.</p>
        </article>

        <article class="benefit-nano-card reveal" style="--delay: 0.05s">
          <div class="benefit-glow"></div>
          <div class="benefit-icon-nano">
            <Icon name="lucide:check-circle" />
          </div>
          <h3>Skill Validation</h3>
          <p>Prove your expertise with hands-on projects and rigorous assessments.</p>
        </article>

        <article class="benefit-nano-card reveal" style="--delay: 0.1s">
          <div class="benefit-glow"></div>
          <div class="benefit-icon-nano">
            <Icon name="lucide:trending-up" />
          </div>
          <h3>Structured Learning</h3>
          <p>Follow a clear path from beginner to expert with our guided curriculum.</p>
        </article>

        <article class="benefit-nano-card reveal" style="--delay: 0.15s">
          <div class="benefit-glow"></div>
          <div class="benefit-icon-nano">
            <Icon name="lucide:users" />
          </div>
          <h3>Community Recognition</h3>
          <p>Join an elite group of certified developers and display your badge with pride.</p>
        </article>
      </div>
    </div>
  </section>

  <section class="how-it-works-nano">
    <div class="container">
      <h2 class="section-title-nano">How It Works</h2>
      <div class="process-nano-grid">
        <article class="process-step-nano reveal">
          <div class="step-glow"></div>
          <div class="step-number-nano">1</div>
          <h3>Choose Your Track</h3>
          <p>Select from {globalStats.certifications} certification tracks based on your goals and experience level.</p>
        </article>

        <article class="process-step-nano reveal" style="--delay: 0.05s">
          <div class="step-glow"></div>
          <div class="step-number-nano">2</div>
          <h3>Complete Coursework</h3>
          <p>Learn through video lessons, hands-on projects, and real-world exercises at your own pace.</p>
        </article>

        <article class="process-step-nano reveal" style="--delay: 0.1s">
          <div class="step-glow"></div>
          <div class="step-number-nano">3</div>
          <h3>Pass the Assessment</h3>
          <p>Demonstrate your skills with a comprehensive project-based assessment reviewed by experts.</p>
        </article>

        <article class="process-step-nano reveal" style="--delay: 0.15s">
          <div class="step-glow"></div>
          <div class="step-number-nano">4</div>
          <h3>Earn Your Certificate</h3>
          <p>Receive your digital certificate and badge to showcase on LinkedIn and your portfolio.</p>
        </article>
      </div>
    </div>
  </section>

  <section class="cta-nano-section">
    <div class="container">
      <div class="cta-nano-card reveal">
        <div class="cta-orb"></div>
        <h2>Ready to Get Certified?</h2>
        <p>Join thousands of certified developers advancing their careers with IAWD.</p>
        <a href="/membership/join" class="btn-nano btn-primary">
          <Icon name="lucide:award" />
          <span>Start Your Certification Journey</span>
          <div class="btn-shine"></div>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  function initReveal() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.reveal').forEach((item) => observer.observe(item));
  }

  document.addEventListener('DOMContentLoaded', initReveal);
</script>

<style>
  .cert-tracks-nano {
    padding: 3rem 0;
  }

  .section-title-nano {
    text-align: center;
    font-size: clamp(1.6rem, 3.5vw, 2.2rem);
    font-family: var(--font-display);
    font-weight: 700;
    margin-bottom: 1.8rem;
    letter-spacing: -0.03em;
    color: var(--text);
  }

  .tracks-nano-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .track-nano-card {
    position: relative;
    padding: 1.2rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .track-glow {
    position: absolute;
    inset: -70px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.18) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .track-nano-card:hover .track-glow {
    opacity: 1;
  }

  .track-nano-card.featured {
    border-color: rgba(var(--accent-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.5);
  }

  .track-nano-card:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-6px) scale(1.02);
  }

  .featured-burst {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .featured-badge-nano {
    position: absolute;
    top: 0.8rem;
    right: 0.8rem;
    padding: 0.3rem 0.6rem;
    background: var(--gradient);
    color: var(--white);
    border-radius: 6px;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    z-index: 2;
  }

  .track-icon-nano {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
    margin-bottom: 0.8rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .track-icon-nano :global(svg) {
    width: 26px;
    height: 26px;
  }

  .track-nano-card:hover .track-icon-nano {
    background: rgba(var(--accent-rgb), 0.2);
    transform: scale(1.15) rotate(-8deg);
  }

  .track-nano-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.01em;
  }

  .track-badge-nano {
    display: inline-block;
    padding: 0.25rem 0.6rem;
    border-radius: 6px;
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin-bottom: 0.6rem;
  }

  .track-badge-nano.professional {
    background: rgba(var(--cyan-400-rgb), 0.12);
    color: var(--cyan-400);
  }

  .track-badge-nano.advanced {
    background: rgba(var(--indigo-400-rgb), 0.12);
    color: var(--indigo-400);
  }

  .track-nano-card p {
    margin: 0 0 0.8rem;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .track-skills-nano {
    list-style: none;
    padding: 0;
    margin: 0 0 0.8rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.4rem;
  }

  .track-skills-nano li {
    font-size: 0.7rem;
    color: var(--text-muted);
    padding-left: 0.8rem;
    position: relative;
  }

  .track-skills-nano li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--accent);
  }

  .track-meta-nano {
    display: flex;
    gap: 0.7rem;
    font-size: 0.7rem;
    color: var(--text-muted);
    margin-bottom: 0.8rem;
  }

  .track-meta-nano span {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
  }

  .track-meta-nano :global(svg) {
    width: 12px;
    height: 12px;
  }

  .track-cta-nano {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 0.85rem;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.12);
    border: 1px solid rgba(var(--accent-rgb), 0.25);
    color: var(--accent);
    font-size: 0.75rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .track-cta-nano :global(svg) {
    width: 12px;
    height: 12px;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .track-cta-nano:hover {
    background: rgba(var(--accent-rgb), 0.2);
    border-color: rgba(var(--accent-rgb), 0.4);
    transform: translateX(4px);
  }

  .track-cta-nano:hover :global(svg) {
    transform: translateX(3px);
  }

  .all-tracks-nano {
    text-align: center;
  }

  .all-tracks-nano a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border-radius: 10px;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    color: var(--accent);
    font-size: 0.8rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .all-tracks-nano a:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.4);
    background: rgba(var(--surface-875-rgb), 0.7);
    transform: translateY(-2px);
  }

  .all-tracks-nano :global(svg) {
    width: 14px;
    height: 14px;
  }

  .cert-benefits-nano {
    padding: 3rem 0;
    background: linear-gradient(180deg, transparent, rgba(var(--surface-900-rgb), 0.4), transparent);
  }

  .benefits-nano-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 0.8rem;
  }

  .benefit-nano-card {
    position: relative;
    padding: 1rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .benefit-glow {
    position: absolute;
    inset: -60px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.15) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .benefit-nano-card:hover .benefit-glow {
    opacity: 1;
  }

  .benefit-nano-card:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-4px);
  }

  .benefit-icon-nano {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
    margin-bottom: 0.8rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .benefit-icon-nano :global(svg) {
    width: 20px;
    height: 20px;
  }

  .benefit-nano-card:hover .benefit-icon-nano {
    background: rgba(var(--accent-rgb), 0.2);
    transform: scale(1.1) rotate(-8deg);
  }

  .benefit-nano-card h3 {
    margin: 0 0 0.5rem;
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.01em;
  }

  .benefit-nano-card p {
    margin: 0;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .how-it-works-nano {
    padding: 3rem 0;
  }

  .process-nano-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.8rem;
  }

  .process-step-nano {
    position: relative;
    padding: 1rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .step-glow {
    position: absolute;
    inset: -60px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.15) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .process-step-nano:hover .step-glow {
    opacity: 1;
  }

  .process-step-nano:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-4px);
  }

  .step-number-nano {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.15);
    border: 2px solid rgba(var(--accent-rgb), 0.3);
    color: var(--accent);
    font-size: 0.9rem;
    font-weight: 700;
    font-family: var(--font-display);
    margin-bottom: 0.8rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .process-step-nano:hover .step-number-nano {
    background: rgba(var(--accent-rgb), 0.25);
    border-color: rgba(var(--accent-rgb), 0.5);
    transform: scale(1.1) rotate(-5deg);
  }

  .process-step-nano h3 {
    margin: 0 0 0.5rem;
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.01em;
  }

  .process-step-nano p {
    margin: 0;
    font-size: 0.72rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .cta-nano-section {
    padding: 3rem 0;
  }

  .cta-nano-card {
    position: relative;
    max-width: 650px;
    margin: 0 auto;
    text-align: center;
    padding: 2rem 1.5rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    border-radius: 16px;
    overflow: hidden;
  }

  .cta-orb {
    position: absolute;
    inset: -80px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.18) 0%,
      transparent 60%
    );
    opacity: 0.8;
    animation: orbPulse 6s ease-in-out infinite;
  }

  @keyframes orbPulse {
    0%, 100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  .cta-nano-card h2 {
    position: relative;
    margin: 0 0 0.6rem;
    font-size: 1.6rem;
    font-family: var(--font-display);
    color: var(--text);
    letter-spacing: -0.02em;
    z-index: 1;
  }

  .cta-nano-card p {
    position: relative;
    margin: 0 0 1.4rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    z-index: 1;
  }

  .btn-nano {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.4rem;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    z-index: 1;
  }

  .btn-nano :global(svg) {
    width: 18px;
    height: 18px;
  }

  .btn-primary {
    background: var(--gradient);
    color: var(--white);
    box-shadow: 0 10px 24px rgba(var(--accent-rgb), 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 14px 32px rgba(var(--accent-rgb), 0.4);
  }

  .btn-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(255, 255, 255, 0.25),
      transparent
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .btn-primary:hover .btn-shine {
    opacity: 1;
  }

  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease var(--delay, 0s), transform 0.6s ease var(--delay, 0s);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 980px) {
    .tracks-nano-grid,
    .process-nano-grid {
      grid-template-columns: 1fr 1fr;
    }

    .benefits-nano-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .tracks-nano-grid,
    .process-nano-grid,
    .benefits-nano-grid {
      grid-template-columns: 1fr;
    }

    .track-skills-nano {
      grid-template-columns: 1fr;
    }

    .cta-nano-card {
      padding: 1.5rem 1rem;
    }

    .cta-nano-card h2 {
      font-size: 1.3rem;
    }
  }
</style>
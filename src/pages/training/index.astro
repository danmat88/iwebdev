---
import PageLayout from '../../layouts/PageLayout.astro';
import PageHero from '../../components/common/PageHero.astro';
import { Icon } from 'astro-icon/components';
import { globalStats } from '../../content/global/stats.config';
---

<PageLayout
  title="Training & Education | IAWD"
  description="Level up your web development skills with live webinars, workshops, certifications, and hands-on learning."
>
  <PageHero
    badge="Training"
    badgeIcon="lucide:graduation-cap"
    title="Learn from the best,"
    highlight="become the best"
    subtitle={`Access ${globalStats.webinars.display} live webinars per year, earn certifications, and learn from industry experts at top tech companies.`}
  />

  <!-- Training Types - Ultra Compact -->
  <section class="training-types-nano">
    <div class="container">
      <div class="types-nano-grid">
        <a href="/training/webinars" class="type-nano-card reveal">
          <div class="type-glow"></div>
          <div class="type-icon-nano">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:video" />
          </div>
          <h3>Live Webinars</h3>
          <p>Weekly expert sessions on trending topics and tech.</p>
          <span class="type-link">
            <span>Browse</span>
            <Icon name="lucide:arrow-right" />
          </span>
        </a>

        <a href="/training/events" class="type-nano-card reveal" style="--delay: 0.08s">
          <div class="type-glow"></div>
          <div class="type-icon-nano">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:calendar-days" />
          </div>
          <h3>Live Events</h3>
          <p>In-person workshops, hackathons, annual summit.</p>
          <span class="type-link">
            <span>View Events</span>
            <Icon name="lucide:arrow-right" />
          </span>
        </a>

        <a href="/training/certifications" class="type-nano-card reveal" style="--delay: 0.16s">
          <div class="type-glow"></div>
          <div class="type-icon-nano">
            <div class="icon-pulse-ring"></div>
            <Icon name="lucide:award" />
          </div>
          <h3>Certifications</h3>
          <p>{globalStats.certifications} tracks to validate your skills.</p>
          <span class="type-link">
            <span>Get Certified</span>
            <Icon name="lucide:arrow-right" />
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Learning Paths - Compact Grid -->
  <section class="learning-paths-nano">
    <div class="container">
      <h2 class="section-title-nano">Popular Learning Paths</h2>
      <div class="paths-nano-grid">
        <article class="path-nano-card reveal">
          <div class="path-glow"></div>
          <div class="path-icon-nano">
            <Icon name="lucide:layout" />
          </div>
          <h3>Frontend Development</h3>
          <p>HTML, CSS, JavaScript, React, Vue, modern frameworks</p>
          <div class="path-meta-nano">
            <span>12 courses</span>
            <span>•</span>
            <span>Beginner to Advanced</span>
          </div>
        </article>

        <article class="path-nano-card reveal" style="--delay: 0.05s">
          <div class="path-glow"></div>
          <div class="path-icon-nano">
            <Icon name="lucide:server" />
          </div>
          <h3>Backend Development</h3>
          <p>Node.js, Python, databases, APIs, server architecture</p>
          <div class="path-meta-nano">
            <span>10 courses</span>
            <span>•</span>
            <span>Intermediate</span>
          </div>
        </article>

        <article class="path-nano-card reveal" style="--delay: 0.1s">
          <div class="path-glow"></div>
          <div class="path-icon-nano">
            <Icon name="lucide:layers" />
          </div>
          <h3>Full Stack Development</h3>
          <p>Complete web apps from frontend to deployment</p>
          <div class="path-meta-nano">
            <span>15 courses</span>
            <span>•</span>
            <span>All levels</span>
          </div>
        </article>

        <article class="path-nano-card reveal" style="--delay: 0.15s">
          <div class="path-glow"></div>
          <div class="path-icon-nano">
            <Icon name="lucide:shield-check" />
          </div>
          <h3>Web Security</h3>
          <p>Authentication, encryption, OWASP, secure coding</p>
          <div class="path-meta-nano">
            <span>8 courses</span>
            <span>•</span>
            <span>Advanced</span>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Compact CTA -->
  <section class="cta-nano-section">
    <div class="container">
      <div class="cta-nano-card reveal">
        <div class="cta-orb"></div>
        <h2>Ready to Level Up?</h2>
        <p>Join {globalStats.members.display} developers advancing their careers with IAWD.</p>
        <a href="/membership/join" class="btn-nano btn-primary">
          <Icon name="lucide:rocket" />
          <span>Start Learning Today</span>
          <div class="btn-shine"></div>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  function initReveal() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.reveal').forEach((item) => observer.observe(item));
  }

  document.addEventListener('DOMContentLoaded', initReveal);
</script>

<style>
  /* ===== TRAINING TYPES - NANO ===== */
  .training-types-nano {
    padding: 3rem 0;
  }

  .types-nano-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.8rem;
  }

  .type-nano-card {
    position: relative;
    padding: 1.2rem 1rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .type-glow {
    position: absolute;
    inset: -70px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.18) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .type-nano-card:hover .type-glow {
    opacity: 1;
  }

  .type-nano-card:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-6px) scale(1.02);
  }

  .type-icon-nano {
    position: relative;
    width: 52px;
    height: 52px;
    margin: 0 auto 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
  }

  .icon-pulse-ring {
    position: absolute;
    inset: -5px;
    border-radius: 50%;
    border: 2px solid rgba(var(--accent-rgb), 0.2);
    animation: iconPulse 3s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.3);
      opacity: 0;
    }
  }

  .type-icon-nano :global(svg) {
    width: 32px;
    height: 32px;
    position: relative;
    z-index: 1;
    filter: drop-shadow(0 0 14px rgba(var(--accent-rgb), 0.4));
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .type-nano-card:hover .type-icon-nano :global(svg) {
    transform: scale(1.2) rotate(-10deg);
  }

  .type-nano-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.01em;
  }

  .type-nano-card p {
    margin: 0 0 0.9rem;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .type-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 0.85rem;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.12);
    border: 1px solid rgba(var(--accent-rgb), 0.25);
    color: var(--accent);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .type-link :global(svg) {
    width: 12px;
    height: 12px;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .type-nano-card:hover .type-link {
    background: rgba(var(--accent-rgb), 0.2);
    border-color: rgba(var(--accent-rgb), 0.4);
    transform: translateX(4px);
  }

  .type-nano-card:hover .type-link :global(svg) {
    transform: translateX(3px);
  }

  /* ===== LEARNING PATHS - NANO ===== */
  .learning-paths-nano {
    padding: 3rem 0;
    background: linear-gradient(180deg, transparent, rgba(var(--surface-900-rgb), 0.4), transparent);
  }

  .section-title-nano {
    text-align: center;
    font-size: clamp(1.6rem, 3.5vw, 2.2rem);
    font-family: var(--font-display);
    font-weight: 700;
    margin-bottom: 1.8rem;
    letter-spacing: -0.03em;
    color: var(--text);
  }

  .paths-nano-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 0.8rem;
  }

  .path-nano-card {
    position: relative;
    padding: 1rem;
    background: rgba(var(--surface-875-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.1);
    border-radius: 12px;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .path-glow {
    position: absolute;
    inset: -60px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.15) 0%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .path-nano-card:hover .path-glow {
    opacity: 1;
  }

  .path-nano-card:hover {
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    background: rgba(var(--surface-875-rgb), 0.6);
    transform: translateY(-4px);
  }

  .path-icon-nano {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
    margin-bottom: 0.8rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .path-icon-nano :global(svg) {
    width: 22px;
    height: 22px;
  }

  .path-nano-card:hover .path-icon-nano {
    background: rgba(var(--accent-rgb), 0.2);
    transform: scale(1.1) rotate(-8deg);
  }

  .path-nano-card h3 {
    margin: 0 0 0.5rem;
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--text);
    font-family: var(--font-display);
    letter-spacing: -0.01em;
  }

  .path-nano-card p {
    margin: 0 0 0.8rem;
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .path-meta-nano {
    display: flex;
    gap: 0.45rem;
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  /* ===== CTA NANO ===== */
  .cta-nano-section {
    padding: 3rem 0;
  }

  .cta-nano-card {
    position: relative;
    max-width: 650px;
    margin: 0 auto;
    text-align: center;
    padding: 2rem 1.5rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    border-radius: 16px;
    overflow: hidden;
  }

  .cta-orb {
    position: absolute;
    inset: -80px;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(var(--accent-rgb), 0.18) 0%,
      transparent 60%
    );
    opacity: 0.8;
    animation: orbPulse 6s ease-in-out infinite;
  }

  @keyframes orbPulse {
    0%, 100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  .cta-nano-card h2 {
    position: relative;
    margin: 0 0 0.6rem;
    font-size: 1.6rem;
    font-family: var(--font-display);
    color: var(--text);
    letter-spacing: -0.02em;
    z-index: 1;
  }

  .cta-nano-card p {
    position: relative;
    margin: 0 0 1.4rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
    z-index: 1;
  }

  .btn-nano {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.4rem;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    z-index: 1;
  }

  .btn-nano :global(svg) {
    width: 18px;
    height: 18px;
  }

  .btn-primary {
    background: var(--gradient);
    color: var(--white);
    box-shadow: 0 10px 24px rgba(var(--accent-rgb), 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 14px 32px rgba(var(--accent-rgb), 0.4);
  }

  .btn-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(255, 255, 255, 0.25),
      transparent
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .btn-primary:hover .btn-shine {
    opacity: 1;
  }

  /* ===== REVEAL ANIMATION ===== */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease var(--delay, 0s), transform 0.6s ease var(--delay, 0s);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 980px) {
    .types-nano-grid {
      grid-template-columns: 1fr 1fr;
    }

    .paths-nano-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .types-nano-grid,
    .paths-nano-grid {
      grid-template-columns: 1fr;
    }

    .cta-nano-card {
      padding: 1.5rem 1rem;
    }

    .cta-nano-card h2 {
      font-size: 1.3rem;
    }
  }
</style>
---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  bodyClass?: string;
}

const {
  title,
  description = 'The International Association of Web Developers',
  bodyClass = '',
} = Astro.props;
const mergedBodyClass = ['page-layout', bodyClass].filter(Boolean).join(' ');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | IWebDev</title>
    <slot name="head" />
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'midnight';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body class={mergedBodyClass}>

    <div class="ambient-bg">
      <div class="ambient-glow-1"></div>
      <div class="ambient-glow-2"></div>
      <div class="ambient-glow-3"></div>
      <div class="ambient-glow-4"></div>
    </div>

    <div class="grid-pattern-advanced"></div>

    <div class="noise-overlay"></div>

    <div class="page-atmosphere" aria-hidden="true">

      <div class="tech-grid-enhanced"></div>

      <div class="tech-gradient tech-gradient-a"></div>
      <div class="tech-gradient tech-gradient-b"></div>
      <div class="tech-gradient tech-gradient-c"></div>

      <div class="scanline-primary"></div>
      <div class="scanline-secondary"></div>

      <div class="data-stream-container">
        <div class="data-stream stream-1"></div>
        <div class="data-stream stream-2"></div>
        <div class="data-stream stream-3"></div>
      </div>

      <div class="particle-field">
        <div class="particle p1"></div>
        <div class="particle p2"></div>
        <div class="particle p3"></div>
        <div class="particle p4"></div>
        <div class="particle p5"></div>
      </div>

      <div class="hud-corners">
        <div class="hud-corner hud-tl"></div>
        <div class="hud-corner hud-tr"></div>
        <div class="hud-corner hud-bl"></div>
        <div class="hud-corner hud-br"></div>
      </div>
    </div>

    <Header />

    <div class="page-shell">
      <div class="page-content">
        <slot />
      </div>
    </div>

    <Footer />

    <style>
      .page-layout {
        min-height: 100vh;
        position: relative;
      }

      .ambient-bg {
        position: fixed;
        inset: 0;
        z-index: 0;
        pointer-events: none;
        overflow: hidden;
      }

      .ambient-glow-1,
      .ambient-glow-2,
      .ambient-glow-3,
      .ambient-glow-4 {
        position: absolute;
        border-radius: 50%;
        filter: blur(140px);
        opacity: 0;
        animation: ambientPulse 25s ease-in-out infinite;
      }

      .ambient-glow-1 {
        width: 700px;
        height: 700px;
        top: -250px;
        left: -200px;
        background: radial-gradient(circle, var(--accent-glow), transparent 70%);
        animation-delay: 0s;
      }

      .ambient-glow-2 {
        width: 600px;
        height: 600px;
        bottom: -150px;
        right: -150px;
        background: radial-gradient(circle, var(--accent-2-glow), transparent 70%);
        animation-delay: -8s;
      }

      .ambient-glow-3 {
        width: 550px;
        height: 550px;
        top: 30%;
        right: 10%;
        background: radial-gradient(circle, rgba(var(--cyan-400-rgb), 0.15), transparent 70%);
        animation-delay: -16s;
      }

      .ambient-glow-4 {
        width: 500px;
        height: 500px;
        bottom: 20%;
        left: 15%;
        background: radial-gradient(circle, rgba(var(--indigo-400-rgb), 0.12), transparent 70%);
        animation-delay: -12s;
      }

      @keyframes ambientPulse {
        0%, 100% {
          opacity: 0.15;
          transform: translate3d(0, 0, 0) scale(1);
        }
        25% {
          opacity: 0.22;
          transform: translate3d(30px, -25px, 0) scale(1.08);
        }
        50% {
          opacity: 0.18;
          transform: translate3d(-20px, 20px, 0) scale(0.95);
        }
        75% {
          opacity: 0.25;
          transform: translate3d(25px, 15px, 0) scale(1.05);
        }
      }

      .grid-pattern-advanced {
        position: fixed;
        inset: 0;
        z-index: 0;
        pointer-events: none;
        background-image:
          linear-gradient(rgba(var(--cyan-400-rgb), 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(var(--cyan-400-rgb), 0.03) 1px, transparent 1px);
        background-size: 48px 48px;
        opacity: 0.2;
        mask-image:
          radial-gradient(ellipse 120% 80% at 50% 0%, black 0%, transparent 70%),
          radial-gradient(ellipse 100% 60% at 50% 100%, black 0%, transparent 60%);
        mask-composite: add;
        animation: gridPulse 15s ease-in-out infinite;
      }

      @keyframes gridPulse {
        0%, 100% { opacity: 0.2; }
        50% { opacity: 0.12; }
      }

      .noise-overlay {
        position: fixed;
        inset: 0;
        z-index: 1;
        pointer-events: none;
        opacity: 0.02;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='3.5' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      }

      .page-atmosphere {
        position: fixed;
        inset: 0;
        z-index: 0;
        pointer-events: none;
        overflow: hidden;
      }

      .tech-grid-enhanced {
        position: absolute;
        inset: 0;
        background-image:
          linear-gradient(rgba(var(--white-rgb), 0.025) 1px, transparent 1px),
          linear-gradient(90deg, rgba(var(--white-rgb), 0.025) 1px, transparent 1px);
        background-size: 64px 64px;
        opacity: 0.3;
        mask-image: radial-gradient(ellipse 100% 70% at 50% 20%, black 0%, transparent 75%);
        animation: techGridShift 20s linear infinite;
      }

      @keyframes techGridShift {
        0% { background-position: 0 0; }
        100% { background-position: 64px 64px; }
      }

      .tech-gradient {
        position: absolute;
        border-radius: 999px;
        filter: blur(120px);
        opacity: 0.18;
        animation: drift 30s ease-in-out infinite;
      }

      .tech-gradient-a {
        width: 650px;
        height: 650px;
        top: -200px;
        left: -140px;
        background: radial-gradient(circle, var(--accent-2-glow), transparent 65%);
        animation-delay: 0s;
      }

      .tech-gradient-b {
        width: 580px;
        height: 580px;
        right: -130px;
        bottom: 5%;
        background: radial-gradient(circle, var(--accent-glow), transparent 65%);
        animation-delay: -10s;
      }

      .tech-gradient-c {
        width: 520px;
        height: 520px;
        top: 40%;
        right: 20%;
        background: radial-gradient(circle, rgba(var(--cyan-400-rgb), 0.12), transparent 65%);
        animation-delay: -20s;
      }

      @keyframes drift {
        0%, 100% {
          transform: translate3d(0, 0, 0) scale(1);
        }
        33% {
          transform: translate3d(30px, -25px, 0) scale(1.06);
        }
        66% {
          transform: translate3d(-25px, 20px, 0) scale(0.98);
        }
      }

      .scanline-primary {
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          180deg,
          transparent 0,
          transparent 3px,
          rgba(var(--white-rgb), 0.015) 4px
        );
        opacity: 0.25;
      }

      .scanline-secondary {
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          90deg,
          transparent 0,
          transparent 5px,
          rgba(var(--cyan-400-rgb), 0.01) 6px
        );
        opacity: 0.2;
        animation: scanMove 8s linear infinite;
      }

      @keyframes scanMove {
        0% { background-position: 0 0; }
        100% { background-position: 100px 0; }
      }

      .data-stream-container {
        position: absolute;
        inset: 0;
        overflow: hidden;
      }

      .data-stream {
        position: absolute;
        width: 1px;
        height: 100px;
        background: linear-gradient(
          180deg,
          transparent 0%,
          var(--accent) 50%,
          transparent 100%
        );
        opacity: 0;
        animation: streamFlow 12s ease-in-out infinite;
      }

      .stream-1 {
        left: 15%;
        animation-delay: 0s;
      }

      .stream-2 {
        left: 50%;
        animation-delay: -4s;
      }

      .stream-3 {
        left: 85%;
        animation-delay: -8s;
      }

      @keyframes streamFlow {
        0% {
          top: -100px;
          opacity: 0;
        }
        10% {
          opacity: 0.3;
        }
        90% {
          opacity: 0.3;
        }
        100% {
          top: 100%;
          opacity: 0;
        }
      }

      .particle-field {
        position: absolute;
        inset: 0;
        overflow: hidden;
      }

      .particle {
        position: absolute;
        width: 3px;
        height: 3px;
        border-radius: 50%;
        background: var(--accent);
        opacity: 0;
        animation: particleFloat 20s ease-in-out infinite;
      }

      .p1 {
        left: 20%;
        animation-delay: 0s;
      }

      .p2 {
        left: 40%;
        animation-delay: -5s;
      }

      .p3 {
        left: 60%;
        animation-delay: -10s;
      }

      .p4 {
        left: 80%;
        animation-delay: -15s;
      }

      .p5 {
        left: 90%;
        animation-delay: -7s;
      }

      @keyframes particleFloat {
        0% {
          bottom: 0;
          opacity: 0;
          transform: translateX(0);
        }
        10% {
          opacity: 0.4;
        }
        90% {
          opacity: 0.4;
        }
        100% {
          bottom: 100%;
          opacity: 0;
          transform: translateX(50px);
        }
      }

      .hud-corners {
        position: absolute;
        inset: 0;
        pointer-events: none;
      }

      .hud-corner {
        position: absolute;
        width: 60px;
        height: 60px;
        border: 1px solid rgba(var(--cyan-400-rgb), 0.15);
        opacity: 0.4;
      }

      .hud-tl {
        top: 20px;
        left: 20px;
        border-right: none;
        border-bottom: none;
        border-top-left-radius: 2px;
      }

      .hud-tr {
        top: 20px;
        right: 20px;
        border-left: none;
        border-bottom: none;
        border-top-right-radius: 2px;
      }

      .hud-bl {
        bottom: 20px;
        left: 20px;
        border-right: none;
        border-top: none;
        border-bottom-left-radius: 2px;
      }

      .hud-br {
        bottom: 20px;
        right: 20px;
        border-left: none;
        border-top: none;
        border-bottom-right-radius: 2px;
      }

      .hud-corner::before {
        content: '';
        position: absolute;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--cyan-400);
        box-shadow: 0 0 12px var(--cyan-400);
        opacity: 0.6;
        animation: hudPulse 3s ease-in-out infinite;
      }

      .hud-tl::before {
        top: -4px;
        left: -4px;
      }

      .hud-tr::before {
        top: -4px;
        right: -4px;
      }

      .hud-bl::before {
        bottom: -4px;
        left: -4px;
      }

      .hud-br::before {
        bottom: -4px;
        right: -4px;
      }

      @keyframes hudPulse {
        0%, 100% {
          opacity: 0.4;
          transform: scale(1);
        }
        50% {
          opacity: 0.8;
          transform: scale(1.2);
        }
      }

      .page-shell {
        position: relative;
        z-index: 2;
        padding: 0;
      }

      .page-content :global(section + section) {
        position: relative;
      }

      .page-content :global(section + section)::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: min(1100px, calc(100% - 48px));
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(var(--cyan-400-rgb), 0.2),
          rgba(var(--white-rgb), 0.14),
          rgba(var(--cyan-400-rgb), 0.2),
          transparent
        );
      }

      .page-shell :global(.container) {
        width: min(1200px, calc(100% - 48px));
        margin: 0 auto;
      }

      .page-shell :global(.page-title),
      .page-shell :global(.section-title) {
        font-family: var(--font-display);
        letter-spacing: -0.03em;
        text-shadow: 0 0 40px rgba(var(--accent-rgb), 0.2);
      }

      .page-shell :global(.badge),
      .page-shell :global(.section-label) {
        border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
        box-shadow:
          inset 0 1px 0 rgba(var(--white-rgb), 0.08),
          0 0 20px rgba(var(--cyan-400-rgb), 0.1);
        backdrop-filter: blur(8px);
      }

      .page-shell :global(.type-card),
      .page-shell :global(.path-card),
      .page-shell :global(.feature-card),
      .page-shell :global(.track-card),
      .page-shell :global(.benefit-card),
      .page-shell :global(.step-card),
      .page-shell :global(.faq-item),
      .page-shell :global(.location-card),
      .page-shell :global(.webinar-card),
      .page-shell :global(.cta-card),
      .page-shell :global(.summit-content) {
        box-shadow:
          0 14px 32px rgba(var(--black-rgb), 0.2),
          inset 0 1px 0 rgba(var(--white-rgb), 0.04),
          0 0 0 1px rgba(var(--cyan-400-rgb), 0.05);
        backdrop-filter: blur(10px);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .page-shell :global(.type-card):hover,
      .page-shell :global(.path-card):hover,
      .page-shell :global(.feature-card):hover,
      .page-shell :global(.track-card):hover,
      .page-shell :global(.benefit-card):hover {
        box-shadow:
          0 20px 40px rgba(var(--black-rgb), 0.3),
          inset 0 1px 0 rgba(var(--white-rgb), 0.08),
          0 0 0 1px rgba(var(--cyan-400-rgb), 0.15);
        transform: translateY(-4px);
      }

      .page-shell :global(.btn-primary) {
        box-shadow:
          0 10px 24px var(--accent-glow),
          0 0 40px rgba(var(--accent-rgb), 0.2);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .page-shell :global(.btn-primary):hover {
        box-shadow:
          0 14px 32px var(--accent-glow),
          0 0 50px rgba(var(--accent-rgb), 0.3);
      }

      .page-shell :global(.btn-secondary) {
        backdrop-filter: blur(8px);
        border-color: rgba(var(--cyan-400-rgb), 0.15);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .page-shell :global(.btn-secondary):hover {
        border-color: rgba(var(--cyan-400-rgb), 0.4);
        background: rgba(var(--white-rgb), 0.05);
      }

      @media (max-width: 900px) {
        .page-shell :global(.container) {
          width: min(1200px, calc(100% - 28px));
        }

        .hud-corner {
          width: 40px;
          height: 40px;
        }
      }

      @media (max-width: 640px) {
        .page-shell {
          padding-top: 0;
        }

        .hud-corners {
          display: none;
        }

        .particle-field {
          display: none;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        .tech-gradient,
        .ambient-glow-1,
        .ambient-glow-2,
        .ambient-glow-3,
        .ambient-glow-4,
        .particle,
        .data-stream,
        .tech-grid-enhanced,
        .scanline-secondary {
          animation: none;
        }
      }
    </style>
  </body>
</html>
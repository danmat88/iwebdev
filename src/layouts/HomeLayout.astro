---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "The International Association of Web Developers" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | IWebDev</title>
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'midnight';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <div class="ambient-bg">
      <div class="ambient-glow-1"></div>
      <div class="ambient-glow-2"></div>
      <div class="ambient-glow-3"></div>
    </div>
    <div class="grid-pattern"></div>
    <div class="noise-overlay"></div>

    <Header />
    <slot />
    <Footer />

    <style is:global>
      [data-world-map-carousel] {
        isolation: isolate;
        contain: layout paint;
      }

      [data-world-map-carousel] .map-state,
      [data-world-map-carousel] .carousel-state {
        contain: paint;
      }

      [data-world-map-carousel] .transition-glow,
      [data-world-map-carousel] .carousel-transition-glow {
        display: none !important;
        animation: none !important;
      }

      [data-world-map-carousel] .map-state.exiting .edge-flare,
      [data-world-map-carousel] .map-state.exiting .entrance-scan-line,
      [data-world-map-carousel] .map-shrink-wrapper.shrinking,
      [data-world-map-carousel] .map-shrink-wrapper.expanding,
      [data-world-map-carousel] .carousel-state.entering,
      [data-world-map-carousel] .carousel-state.exiting,
      [data-world-map-carousel] .carousel-state.entering .terminal-card,
      [data-world-map-carousel] .carousel-state.exiting .terminal-card {
        animation: none !important;
      }
    </style>
  </body>
</html>

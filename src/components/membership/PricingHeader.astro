---
import type { PricingHeader as HeaderProps } from '../../../config/pricing.types';

interface Props {
  header: HeaderProps;
}

const { header } = Astro.props;
---

<div class="pricing-header-nano">
  {header.launchBadge.show && (
    <div class="launch-pill-nano">
      <span class="pill-shimmer"></span>
      <span class="pill-icon-nano">{header.launchBadge.icon}</span>
      <span class="pill-text-nano">{header.launchBadge.text}</span>
      <span class="pill-badge-nano">{header.launchBadge.discount}</span>
    </div>
  )}

  <h2 class="pricing-title-nano">
    <span class="title-line-nano">{header.title.line1}</span>
    <span class="title-gradient-nano">{header.title.line2}</span>
  </h2>

  <p class="pricing-subtitle-nano">{header.subtitle}</p>
</div>

<style>
  .pricing-header-nano {
    text-align: center;
    margin-bottom: 2rem;
  }

  .launch-pill-nano {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.9rem;
    background: rgba(var(--cyan-400-rgb), 0.08);
    border: 1px solid rgba(var(--accent-rgb), 0.3);
    border-radius: 100px;
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--accent);
    overflow: hidden;
    margin-bottom: 1.2rem;
  }

  .pill-shimmer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(var(--white-rgb), 0.15),
      transparent
    );
    animation: shimmer 2.5s linear infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  .pill-icon-nano {
    font-size: 0.85rem;
    animation: pillPulse 2s ease-in-out infinite;
  }

  @keyframes pillPulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .pill-badge-nano {
    padding: 0.15rem 0.5rem;
    background: var(--accent);
    color: var(--bg);
    border-radius: 100px;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.03em;
  }

  .pricing-title-nano {
    display: flex;
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-family: var(--font-display);
    align-items: center;
    justify-content: center;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 0.8rem;
    gap: 0.8rem;
    letter-spacing: -0.03em;
  }

  .title-line-nano {
    display: block;
    color: var(--text);
  }

  .title-gradient-nano {
    display: block;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .pricing-subtitle-nano {
    font-size: 0.9rem;
    color: var(--text-secondary);
    max-width: 580px;
    margin: 0 auto;
    line-height: 1.5;
  }

  @media (max-width: 640px) {
    .pricing-title-nano {
      flex-direction: column;
      gap: 0.3rem;
    }

    .pricing-subtitle-nano {
      font-size: 0.85rem;
    }
  }
</style>
---
import { faqConfig } from '../../content/pages/support/faq.config';
import FAQItem from '../cards/FAQItem.astro';
import { Icon } from 'astro-icon/components';

const { categories, faqs } = faqConfig;
const popularFaqs = faqs.filter(faq => faq.popular).slice(0, 6);
---

<section class="faq-nano">
  <div class="faq-atmosphere parallax-bg" data-speed="0.2">
    <div class="gradient-orb-nano orb-1"></div>
    <div class="gradient-orb-nano orb-2"></div>
    <div class="grid-overlay-nano"></div>
  </div>

  <div class="faq-container-nano">
    <header class="faq-header-nano entrance-slide-up">
      <span class="section-tag-nano">
        <Icon name="lucide:help-circle" />
        <span>FAQ</span>
      </span>
      <h2 class="faq-title-nano">
        Frequently Asked
        <span class="title-accent-nano">Questions</span>
      </h2>
      <p class="faq-subtitle-nano">
        Quick answers to common questions about membership and benefits.
      </p>
    </header>

    <div class="faq-grid-nano cascade-group">
      {popularFaqs.map((faq, i) => (
        <div class="cascade-item" style={`--delay: ${i * 0.08}s`}>
          <FAQItem faq={faq} category={categories.find(c => c.id === faq.category)} />
        </div>
      ))}
    </div>

    <div class="faq-footer-nano entrance-fade" style="--delay: 0.5s">
      <p>Can't find what you're looking for?</p>
      <a href="/support/faq" class="view-all-btn-nano">
        <span>View All FAQs</span>
        <Icon name="lucide:arrow-right" />
        <div class="btn-shine-nano"></div>
      </a>
    </div>
  </div>
</section>

<style>
  .faq-nano {
    position: relative;
    padding: 4rem 0;
    overflow: hidden;
  }

  .faq-atmosphere {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .gradient-orb-nano {
    position: absolute;
    border-radius: 50%;
    filter: blur(90px);
    animation: orbFloat 15s ease-in-out infinite;
  }

  .orb-1 {
    top: 10%;
    left: -5%;
    width: 450px;
    height: 450px;
    background: radial-gradient(circle, rgba(var(--indigo-400-rgb), 0.06), transparent 70%);
  }

  .orb-2 {
    bottom: 10%;
    right: -5%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(var(--pink-400-rgb), 0.05), transparent 70%);
    animation-delay: -7.5s;
  }

  @keyframes orbFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20px, 20px) scale(1.05); }
  }

  .grid-overlay-nano {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(var(--white-rgb), 0.01) 1px, transparent 1px),
      linear-gradient(90deg, rgba(var(--white-rgb), 0.01) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 80% 65% at 50% 50%, black, transparent);
    -webkit-mask-image: radial-gradient(ellipse 80% 65% at 50% 50%, black, transparent);
  }

  .faq-container-nano {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .faq-header-nano {
    text-align: center;
    max-width: 650px;
    margin: 0 auto 2rem;
  }

  .section-tag-nano {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.8rem;
    background: rgba(var(--surface-875-rgb), 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.2);
    border-radius: 100px;
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .section-tag-nano :global(svg) {
    width: 14px;
    height: 14px;
    color: var(--accent);
  }

  .faq-title-nano {
    margin: 0 0 0.8rem;
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-family: var(--font-display);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--text);
  }

  .title-accent-nano {
    display: block;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .faq-subtitle-nano {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .faq-grid-nano {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.8rem;
    margin-bottom: 2rem;
  }

  .faq-footer-nano {
    text-align: center;
    padding: 1.5rem;
    background: rgba(var(--surface-875-rgb), 0.3);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(var(--cyan-400-rgb), 0.15);
    border-radius: 12px;
  }

  .faq-footer-nano p {
    margin: 0 0 0.9rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .view-all-btn-nano {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.7rem 1.3rem;
    background: rgba(var(--accent-rgb), 0.12);
    border: 1px solid rgba(var(--accent-rgb), 0.25);
    border-radius: 10px;
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--accent);
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .view-all-btn-nano :global(svg) {
    width: 16px;
    height: 16px;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn-shine-nano {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(var(--accent-rgb), 0.2),
      transparent
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .view-all-btn-nano:hover {
    background: rgba(var(--accent-rgb), 0.2);
    border-color: rgba(var(--accent-rgb), 0.4);
    transform: translateY(-3px);
    box-shadow: 0 10px 24px rgba(var(--accent-rgb), 0.2);
  }

  .view-all-btn-nano:hover .btn-shine-nano {
    opacity: 1;
  }

  .view-all-btn-nano:hover :global(svg) {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .faq-nano {
      padding: 3rem 0;
    }

    .faq-grid-nano {
      grid-template-columns: 1fr;
      gap: 0.7rem;
    }

    .faq-container-nano {
      padding: 0 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .gradient-orb-nano {
      animation: none;
    }
  }
</style>
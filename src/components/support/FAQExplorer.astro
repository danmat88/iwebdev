---
  
import { faqConfig } from '../../content/pages/support/faq.config';
import FAQSearch from './FAQSearch.astro';
import FAQCategories from './FAQCategories.astro';
import FAQItem from '../cards/FAQItem.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  showHero?: boolean;
}

const { showHero = true } = Astro.props;
const { title, subtitle, searchPlaceholder, categories, faqs, contactCTA, feedback, emptyState } = faqConfig;
const popularFaqs = faqs.filter(faq => faq.popular);
---

<section class={`faq-section ${showHero ? '' : 'no-hero'}`.trim()}>
  <!-- Atmosphere -->
  <div class="faq-atmosphere">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="grid-overlay"></div>
  </div>

  {showHero && (
    <header class="faq-hero">
      <div class="hero-inner">
        <div class="hero-badge">
          <span class="badge-dot"></span>
          <span>Help Center</span>
          <span class="badge-count">{faqs.length} articles</span>
        </div>
        <h1 class="hero-title">
          <span class="title-line">How can we</span>
          <span class="title-line"><span class="gradient-text-animated">help you?</span></span>
        </h1>
        <p class="hero-subtitle">{subtitle}</p>
        
        <div class="hero-search">
          <FAQSearch placeholder={searchPlaceholder} />
        </div>

        <div class="stats-bar">
          <div class="stat">
            <span class="stat-value">{faqs.length}</span>
            <span class="stat-label">Articles</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-value">{categories.length}</span>
            <span class="stat-label">Categories</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-value">24/7</span>
            <span class="stat-label">Support</span>
          </div>
        </div>
      </div>
    </header>
  )}

  <!-- Bento Popular -->
  <div class="bento-section" id="bento-section">
    <div class="bento-container">
      <div class="bento-header">
        <div class="bento-title">
          <Icon name="lucide:zap" />
          <span>Most Asked</span>
        </div>
        <a href="#all-faqs" class="bento-link">
          View all <Icon name="lucide:arrow-down" />
        </a>
      </div>
      
      <div class="bento-grid">
        {popularFaqs.slice(0, 6).map((faq, i) => (
          <button class={`bento-card bento-${i + 1}`} data-target={faq.id} style={`--delay: ${i * 50}ms`}>
            <span class="bento-num">{String(i + 1).padStart(2, '0')}</span>
            <span class="bento-cat">
              <Icon name={categories.find(c => c.id === faq.category)?.icon || 'lucide:help-circle'} />
              {categories.find(c => c.id === faq.category)?.name}
            </span>
            <span class="bento-q">{faq.question}</span>
            <span class="bento-arrow"><Icon name="lucide:arrow-down-right" /></span>
          </button>
        ))}
      </div>
    </div>
  </div>

  <!-- Main -->
  <div class="faq-main" id="all-faqs">
    <div class="faq-container">
      <!-- Sidebar -->
      <aside class="faq-sidebar">
        <div class="sidebar-inner">
          <div class="sidebar-title"><Icon name="lucide:folder" /> Categories</div>
          <FAQCategories categories={categories} />
          
          <div class="sidebar-help">
            <div class="help-icon"><Icon name="lucide:headphones" /></div>
            <span>Need help?</span>
            <a href={contactCTA.primaryButton.url}>
              {contactCTA.primaryButton.text} <Icon name="lucide:arrow-right" />
            </a>
          </div>
        </div>
      </aside>

      <!-- Content -->
      <div class="faq-content">
        <div class="mobile-cats">
          <FAQCategories categories={categories} />
        </div>

        <div class="content-bar">
          <div class="bar-info">
            <span class="bar-count" id="faq-count">{faqs.length} questions</span>
            <span class="bar-filter" id="active-filter">All</span>
          </div>
          <div class="bar-sort">
            <button class="sort-btn active" data-sort="default"><Icon name="lucide:list" /> All</button>
            <button class="sort-btn" data-sort="popular"><Icon name="lucide:flame" /> Popular</button>
          </div>
        </div>

        <div class="faq-list" id="faq-list">
          {faqs.map((faq, i) => (
            <FAQItem faq={faq} showFeedback={feedback.enabled} index={i} />
          ))}
        </div>

        <div class="faq-empty" id="faq-empty">
          <div class="empty-icon"><Icon name="lucide:search-x" /></div>
          <h3>{emptyState.title}</h3>
          <p>{emptyState.description}</p>
          <button class="empty-btn" id="reset-btn"><Icon name="lucide:refresh-cw" /> Reset</button>
        </div>
      </div>
    </div>
  </div>
 
</section>

<script define:vars={{ faqs, categories }}>
class FAQ {
  constructor() {
    this.faqs = faqs;
    this.categories = categories;
    this.cat = 'all';
    this.query = '';
    this.sort = 'default';
    this.scrollingTo = null;
    this.init();
  }

  init() {
    this.bindSearch();
    this.bindCategories();
    this.bindAccordions();
    this.bindFeedback();
    this.bindCopy();
    this.bindBento();
    this.bindRelated();
    this.bindSort();
    this.bindReset();
    this.bindKeys();
    this.updateCounts();
    if (location.hash) setTimeout(() => this.goTo(location.hash.slice(1)), 200);
  }

  bindSearch() {
    const input = document.getElementById('faq-search');
    const clear = document.getElementById('search-clear');
    if (!input) return;
    let t;
    input.addEventListener('input', e => {
      clearTimeout(t);
      t = setTimeout(() => {
        this.query = e.target.value.toLowerCase().trim();
        this.filter();
        this.highlight();
        clear?.classList.toggle('visible', !!this.query);
      }, 80);
    });
    clear?.addEventListener('click', () => {
      input.value = '';
      this.query = '';
      this.filter();
      this.clearHL();
      clear.classList.remove('visible');
      input.focus();
    });
  }

  highlight() {
    this.clearHL();
    if (!this.query) return;
    document.querySelectorAll('.faq-item:not(.hidden) .question-text').forEach(el => {
      const t = el.textContent;
      const r = new RegExp(`(${this.query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
      if (r.test(t)) el.innerHTML = t.replace(r, '<mark>$1</mark>');
    });
  }

  clearHL() {
    document.querySelectorAll('.faq-item mark').forEach(m => m.replaceWith(m.textContent));
  }

  bindCategories() {
    document.querySelectorAll('.cat-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        this.cat = btn.dataset.cat;
        document.getElementById('active-filter').textContent = this.cat === 'all' ? 'All' : this.categories.find(c => c.id === this.cat)?.name;
        this.filter();
      });
    });
  }

  bindSort() {
    document.querySelectorAll('.sort-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.sort-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        this.sort = btn.dataset.sort;
        this.filter();
      });
    });
  }

  filter() {
    const list = document.getElementById('faq-list');
    const items = [...document.querySelectorAll('.faq-item')];
    
    if (this.sort === 'popular') {
      items.sort((a, b) => (b.dataset.popular === 'true' ? 1 : 0) - (a.dataset.popular === 'true' ? 1 : 0));
      items.forEach(i => list.appendChild(i));
    }

    let v = 0;
    items.forEach(item => {
      const f = this.faqs.find(x => x.id === item.dataset.id);
      if (!f) return;
      const catOk = this.cat === 'all' || f.category === this.cat;
      const qOk = !this.query || f.question.toLowerCase().includes(this.query) || f.answer.toLowerCase().includes(this.query) || f.tags?.some(t => t.toLowerCase().includes(this.query));
      const show = catOk && qOk;
      item.classList.toggle('hidden', !show);
      if (show) { item.style.setProperty('--i', v); v++; }
    });

    document.getElementById('faq-empty')?.classList.toggle('visible', v === 0);
    document.getElementById('bento-section')?.classList.toggle('hidden', !!this.query || this.cat !== 'all');
    this.updateCounts(v);
  }

  updateCounts(v) {
    const t = this.faqs.length;
    const el = document.getElementById('faq-count');
    if (el) el.textContent = v !== undefined ? `${v} of ${t}` : `${t} questions`;
    
    const all = this.faqs.filter(f => !this.query || f.question.toLowerCase().includes(this.query) || f.answer.toLowerCase().includes(this.query)).length;
    const allEl = document.getElementById('count-all');
    if (allEl) allEl.textContent = all;
    
    this.categories.forEach(c => {
      const n = this.faqs.filter(f => f.category === c.id && (!this.query || f.question.toLowerCase().includes(this.query) || f.answer.toLowerCase().includes(this.query))).length;
      const el = document.getElementById(`count-${c.id}`);
      if (el) el.textContent = n;
    });
  }

  bindAccordions() {
    document.querySelectorAll('.faq-trigger').forEach(btn => {
      btn.addEventListener('click', () => {
        if (this.scrollingTo) return;
        const item = btn.closest('.faq-item');
        const open = item.classList.contains('open');
        item.classList.toggle('open');
        btn.setAttribute('aria-expanded', !open);
        if (!open) history.replaceState(null, '', `#${item.dataset.id}`);
      });
    });
  }

  bindFeedback() {
    document.querySelectorAll('.fb-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        btn.closest('.feedback').classList.add('done');
        btn.classList.add('picked');
      });
    });
  }

  bindCopy() {
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async e => {
        e.stopPropagation();
        const url = `${location.origin}${location.pathname}#${btn.dataset.id}`;
        try {
          await navigator.clipboard.writeText(url);
          btn.classList.add('copied');
          setTimeout(() => btn.classList.remove('copied'), 2000);
        } catch {}
      });
    });
  }

  bindBento() {
    document.querySelectorAll('.bento-card').forEach(card => {
      card.addEventListener('click', () => this.goTo(card.dataset.target));
      card.addEventListener('mousemove', e => {
        const r = card.getBoundingClientRect();
        card.style.setProperty('--rx', `${((e.clientY - r.top) / r.height - 0.5) * -6}deg`);
        card.style.setProperty('--ry', `${((e.clientX - r.left) / r.width - 0.5) * 6}deg`);
      });
      card.addEventListener('mouseleave', () => {
        card.style.setProperty('--rx', '0deg');
        card.style.setProperty('--ry', '0deg');
      });
    });
  }

  bindRelated() {
    document.querySelectorAll('.related-link').forEach(link => {
      const id = link.dataset.related;
      const f = this.faqs.find(x => x.id === id);
      if (f) link.querySelector('.related-text').textContent = f.question;
      link.addEventListener('click', e => {
        e.preventDefault();
        e.stopPropagation();
        this.goTo(id);
      });
    });
  }

  bindReset() {
    document.getElementById('reset-btn')?.addEventListener('click', () => {
      document.getElementById('faq-search').value = '';
      this.query = '';
      this.cat = 'all';
      document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
      document.querySelector('.cat-btn[data-cat="all"]')?.classList.add('active');
      document.getElementById('active-filter').textContent = 'All';
      this.filter();
      this.clearHL();
      document.getElementById('search-clear')?.classList.remove('visible');
    });
  }

  bindKeys() {
    document.addEventListener('keydown', e => {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        document.getElementById('faq-search')?.focus();
      }
      if (e.key === 'Escape') {
        const inp = document.getElementById('faq-search');
        if (inp?.value) {
          inp.value = '';
          this.query = '';
          this.filter();
          this.clearHL();
          document.getElementById('search-clear')?.classList.remove('visible');
        }
      }
    });
  }

  goTo(id) {
    const item = document.getElementById(id);
    if (!item) return;
    
    item.classList.remove('hidden');
    const wasOpen = item.classList.contains('open');
    
    this.scrollingTo = id;
    
    const y = item.getBoundingClientRect().top + window.pageYOffset - 100;
    window.scrollTo({ top: y, behavior: 'smooth' });
    
    setTimeout(() => {
      if (!wasOpen) {
        item.classList.add('open');
        item.querySelector('.faq-trigger')?.setAttribute('aria-expanded', 'true');
        history.replaceState(null, '', `#${id}`);
      }
      item.classList.add('flash');
      setTimeout(() => item.classList.remove('flash'), 600);
      this.scrollingTo = null;
    }, 400);
  }
}

document.addEventListener('DOMContentLoaded', () => new FAQ());
</script>

<style>
  .faq-section {
    position: relative;
    width: 100%;
  }

  /* Atmosphere */
  .faq-atmosphere {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    animation: orb 30s ease-in-out infinite;
  }

  .orb-1 {
    width: 700px;
    height: 700px;
    background: var(--accent-glow);
    top: -250px;
    right: -150px;
    opacity: 0.5;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: rgba(var(--indigo-400-rgb), 0.1);
    bottom: 10%;
    left: -150px;
    opacity: 0.4;
    animation-delay: -10s;
  }

  @keyframes orb {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(20px, -20px); }
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(var(--border) 1px, transparent 1px), linear-gradient(90deg, var(--border) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.025;
  }

  /* Hero */
  .faq-hero {
    position: relative;
    padding: 140px 24px 80px;
    text-align: center;
  }

  .faq-section.no-hero .bento-section {
    padding-top: 24px;
  }

  .hero-inner {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 16px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 100px;
    font-size: 12px;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 24px;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--accent);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .badge-count {
    padding: 3px 10px;
    background: var(--accent-glow);
    border-radius: 100px;
    color: var(--accent);
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 7vw, 4.5rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 16px;
  }

  .title-line {
    display: block;
    color: var(--text);
  }

  .hero-subtitle {
    font-size: 17px;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 450px;
    margin: 0 auto 36px;
  }

  .hero-search {
    max-width: 560px;
    margin: 0 auto 40px;
  }

  .stats-bar {
    display: inline-flex;
    align-items: center;
    gap: 28px;
    padding: 14px 28px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 14px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: 22px;
    font-weight: 700;
    color: var(--text);
  }

  .stat-label {
    font-size: 10px;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 28px;
    background: var(--border);
  }

  
  .bento-section {
    position: relative;
    padding: 0 24px 72px;
  }

  .bento-section.hidden { display: none; }

  .bento-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .bento-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .bento-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-display);
    font-size: 16px;
    font-weight: 600;
    color: var(--text);
  }

  .bento-title :global(svg) {
    width: 18px;
    height: 18px;
    color: var(--accent);
  }

  .bento-link {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 13px;
    color: var(--text-muted);
    transition: color 0.2s;
  }

  .bento-link:hover { color: var(--accent); }


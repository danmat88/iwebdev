    width: 14px;
    height: 14px;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 150px);
    gap: 14px;
  }

  .bento-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 18px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 14px;
    text-align: left;
    cursor: pointer;
    overflow: hidden;
    transform: perspective(600px) rotateX(var(--rx, 0)) rotateY(var(--ry, 0));
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    animation: bento 0.5s ease calc(var(--delay)) both;
  }

  @keyframes bento {
    from { opacity: 0; transform: scale(0.96) translateY(12px); }
    to { opacity: 1; transform: scale(1) translateY(0); }
  }

  .bento-1 { grid-column: span 2; }
  .bento-5 { grid-column: span 2; }

  .bento-card:hover {
    border-color: var(--accent);
    transform: perspective(600px) rotateX(var(--rx, 0)) rotateY(var(--ry, 0)) translateY(-3px);
    box-shadow: 0 16px 32px rgba(var(--black-rgb), 0.12);
  }

  .bento-num {
    position: absolute;
    top: 14px;
    right: 14px;
    font-size: 11px;
    font-weight: 700;
    color: var(--text-muted);
    opacity: 0.3;
  }

  .bento-cat {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 10px;
    font-weight: 700;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    margin-bottom: auto;
  }

  .bento-cat :global(svg) {
    width: 11px;
    height: 11px;
  }

  .bento-q {
    font-family: var(--font-display);
    font-size: 14px;
    font-weight: 600;
    color: var(--text);
    line-height: 1.4;
    margin-top: 10px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .bento-arrow {
    position: absolute;
    bottom: 14px;
    right: 14px;
    width: 26px;
    height: 26px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border-radius: 7px;
    color: var(--text-muted);
    opacity: 0;
    transition: all 0.25s ease;
  }

  .bento-card:hover .bento-arrow {
    opacity: 1;
    background: var(--accent);
    color: var(--black);
  }

  .bento-arrow :global(svg) {
    width: 13px;
    height: 13px;
  }

  /* Main */
  .faq-main {
    position: relative;
    padding: 0 24px 80px;
  }

  .faq-container {
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: 40px;
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Sidebar */
  .faq-sidebar {
    position: relative;
  }

  .sidebar-inner {
    position: sticky;
    top: 100px;
  }

  .sidebar-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-display);
    font-size: 13px;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 16px;
  }

  .sidebar-title :global(svg) {
    width: 15px;
    height: 15px;
    color: var(--accent);
  }

  .sidebar-help {
    margin-top: 24px;
    padding: 18px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 14px;
    text-align: center;
  }

  .help-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-glow);
    border: 1px solid var(--accent);
    border-radius: 10px;
    margin: 0 auto 10px;
    color: var(--accent);
  }

  .help-icon :global(svg) {
    width: 18px;
    height: 18px;
  }

  .sidebar-help span {
    display: block;
    font-size: 12px;
    color: var(--text-secondary);
    margin-bottom: 8px;
  }

  .sidebar-help a {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    font-size: 12px;
    font-weight: 600;
    color: var(--accent);
  }

  .sidebar-help a :global(svg) {
    width: 12px;
    height: 12px;
    transition: transform 0.2s;
  }

  .sidebar-help a:hover :global(svg) {
    transform: translateX(2px);
  }

  .mobile-cats { display: none; }

  /* Content */
  .faq-content {
    min-width: 0;
  }

  .content-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    margin-bottom: 20px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border);
  }

  .bar-info {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .bar-count {
    font-size: 13px;
    font-weight: 600;
    color: var(--text);
  }

  .bar-filter {
    font-size: 11px;

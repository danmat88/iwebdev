---
import { Icon } from 'astro-icon/components';

interface ActionItem {
  text: string;
  href: string;
  icon?: string;
  variant?: 'primary' | 'secondary';
}

interface MetaItem {
  text: string;
  icon?: string;
}

interface Props {
  badge: string;
  title: string;
  highlight?: string;
  subtitle: string;
  badgeIcon?: string;
  actions?: ActionItem[];
  meta?: MetaItem[];
}

const {
  badge,
  title,
  highlight,
  subtitle,
  badgeIcon = 'lucide:sparkles',
  actions = [],
  meta = [],
} = Astro.props;
---

<section class="ph-hero">
  <div class="container">
    <div class="ph-shell">
      <span class="ph-badge">
        <Icon name={badgeIcon} />
        {badge}
      </span>

      <h1 class="ph-title">
        <span>{title}</span>
        {highlight && <span class="ph-highlight">{highlight}</span>}
      </h1>

      <p class="ph-subtitle">{subtitle}</p>

      {meta.length > 0 && (
        <div class="ph-meta">
          {meta.map((item) => (
            <div class="ph-meta-item">
              {item.icon && <Icon name={item.icon} />}
              <span>{item.text}</span>
            </div>
          ))}
        </div>
      )}

      {actions.length > 0 && (
        <div class="ph-actions">
          {actions.map((action) => (
            <a href={action.href} class={`ph-btn ${action.variant === 'secondary' ? 'ph-btn-secondary' : 'ph-btn-primary'}`}>
              {action.icon && <Icon name={action.icon} />}
              <span>{action.text}</span>
            </a>
          ))}
        </div>
      )}

      <slot />
    </div>
  </div>
</section>

<style>
  .ph-hero {
    position: relative;
    padding: 8.5rem 0 3.5rem;
    overflow: hidden;
  }

  .ph-shell {
    max-width: 860px;
    margin: 0 auto;
    text-align: center;
  }

  .ph-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0.45rem 0.95rem;
    border-radius: 999px;
    background: linear-gradient(135deg, rgba(var(--surface-875-rgb), 0.95), rgba(var(--surface-900-rgb), 0.95));
    border: 1px solid rgba(var(--white-rgb), 0.16);
    color: var(--text-secondary);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    box-shadow: 0 10px 24px rgba(var(--black-rgb), 0.2);
  }

  .ph-badge :global(svg) {
    width: 14px;
    height: 14px;
    color: var(--accent);
  }

  .ph-title {
    margin: 1.1rem 0 1.05rem;
    color: var(--text);
    font-family: var(--font-display);
    font-size: clamp(2.3rem, 4.8vw, 3.85rem);
    font-weight: var(--font-bold);
    line-height: 1.08;
    letter-spacing: -0.03em;
  }

  .ph-title span {
    display: block;
  }

  .ph-highlight {
    background: linear-gradient(120deg, var(--cyan-400), var(--indigo-400), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ph-subtitle {
    margin: 0 auto;
    max-width: 720px;
    color: var(--text-secondary);
    font-size: clamp(1rem, 1.5vw, 1.22rem);
    line-height: 1.72;
  }

  .ph-meta {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 1.5rem;
  }

  .ph-meta-item {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 0.5rem 0.8rem;
    border-radius: 999px;
    background: rgba(var(--surface-875-rgb), 0.92);
    border: 1px solid rgba(var(--white-rgb), 0.1);
    color: var(--text-muted);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
  }

  .ph-meta-item :global(svg) {
    width: 14px;
    height: 14px;
    color: var(--accent);
  }

  .ph-actions {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 1.8rem;
  }

  .ph-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0.85rem 1.25rem;
    border-radius: 12px;
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    transition: transform var(--transition-base), box-shadow var(--transition-base), border-color var(--transition-base);
  }

  .ph-btn :global(svg) {
    width: 17px;
    height: 17px;
  }

  .ph-btn-primary {
    color: var(--white);
    background: var(--gradient);
    border: 1px solid transparent;
    box-shadow: 0 12px 26px var(--accent-glow);
  }

  .ph-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 30px var(--accent-glow);
  }

  .ph-btn-secondary {
    color: var(--text);
    background: rgba(var(--surface-900-rgb), 0.86);
    border: 1px solid rgba(var(--white-rgb), 0.16);
  }

  .ph-btn-secondary:hover {
    transform: translateY(-2px);
    border-color: var(--accent);
  }

  @media (max-width: 768px) {
    .ph-hero {
      padding-top: 7.4rem;
      padding-bottom: 3rem;
    }

    .ph-actions {
      flex-direction: column;
      align-items: stretch;
      width: min(100%, 360px);
      margin-left: auto;
      margin-right: auto;
    }

    .ph-btn {
      justify-content: center;
    }
  }
</style>

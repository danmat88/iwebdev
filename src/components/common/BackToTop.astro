<div class="back-to-top" id="back-to-top">
  <div class="btt-glow"></div>

  <svg class="progress-ring" viewBox="0 0 60 60">
    <circle class="progress-bg" cx="30" cy="30" r="26" />
    <circle class="progress-bar" cx="30" cy="30" r="26" />
  </svg>

  <button class="btt-button" aria-label="Back to top">
    <div class="btt-content">

      <div class="btt-icon">
        <span class="bracket left">&lt;</span>
        <svg class="arrow" width="16" height="16" viewBox="0 0 24 24" fill="none">
          <path d="M12 19V5M5 12l7-7 7 7" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="bracket right">/&gt;</span>
      </div>

      <div class="btt-hover">
        <span class="hover-text">return</span>
        <span class="hover-cursor">_</span>
      </div>
    </div>
  </button>

  <div class="btt-tooltip">
    <code>scrollTo(0)</code>
  </div>

  <div class="click-particles">
    <span class="particle">{'{'}</span>
    <span class="particle">{'}'}</span>
    <span class="particle">&lt;</span>
    <span class="particle">/&gt;</span>
    <span class="particle">;</span>
    <span class="particle">=</span>
  </div>
</div>

<script>
  const backToTop = document.getElementById('back-to-top');
  const progressBar = backToTop?.querySelector('.progress-bar') as SVGCircleElement;
  const button = backToTop?.querySelector('.btt-button');

  const circumference = 2 * Math.PI * 26;

  if (progressBar) {
    progressBar.style.strokeDasharray = `${circumference}`;
    progressBar.style.strokeDashoffset = `${circumference}`;
  }

  const updateScrollProgress = () => {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPercent = scrollTop / docHeight;

    if (scrollTop > 300) {
      backToTop?.classList.add('visible');
    } else {
      backToTop?.classList.remove('visible');
    }

    if (progressBar) {
      const offset = circumference - (scrollPercent * circumference);
      progressBar.style.strokeDashoffset = `${offset}`;
    }
  };

  const scrollToTop = () => {
    backToTop?.classList.add('clicked');

    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });

    setTimeout(() => {
      backToTop?.classList.remove('clicked');
    }, 600);
  };

  window.addEventListener('scroll', updateScrollProgress, { passive: true });
  button?.addEventListener('click', scrollToTop);

  updateScrollProgress();
</script>

<style>
  .back-to-top {
    position: fixed;
    bottom: 32px;
    right: 32px;
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.9);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .back-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .btt-glow {
    position: absolute;
    inset: -10px;
    background: radial-gradient(circle, rgba(var(--cyan-400-rgb), 0.3), transparent 70%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .back-to-top:hover .btt-glow {
    opacity: 1;
  }

  .progress-ring {
    position: absolute;
    inset: 0;
    width: 60px;
    height: 60px;
    transform: rotate(-90deg);
    pointer-events: none;
  }

  .progress-bg {
    fill: none;
    stroke: rgba(var(--white-rgb), 0.1);
    stroke-width: 3;
  }

  .progress-bar {
    fill: none;
    stroke: url(#progress-gradient);
    stroke-width: 3;
    stroke-linecap: round;
    transition: stroke-dashoffset 0.1s ease;
  }

  .progress-ring {
    --gradient-start: var(--cyan-400);
    --gradient-end: var(--purple-500);
  }

  .progress-bar {
    stroke: var(--cyan-400);
  }

  .btt-button {
    position: relative;
    width: 60px;
    height: 60px;
    background: rgba(var(--surface-900-rgb), 0.95);
    border: 1px solid rgba(var(--white-rgb), 0.1);
    border-radius: 50%;
    cursor: pointer;
    overflow: hidden;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    box-shadow:
      0 10px 40px rgba(var(--black-rgb), 0.3),
      0 0 0 1px rgba(var(--white-rgb), 0.05) inset;
  }

  .btt-button:hover {
    background: rgba(var(--surface-850-rgb), 0.95);
    border-color: rgba(var(--cyan-400-rgb), 0.3);
    box-shadow:
      0 15px 50px rgba(var(--black-rgb), 0.4),
      0 0 30px rgba(var(--cyan-400-rgb), 0.2),
      0 0 0 1px rgba(var(--cyan-400-rgb), 0.2) inset;
    transform: scale(1.05);
  }

  .btt-button:active {
    transform: scale(0.95);
  }

  .btt-content {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btt-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2px;
    transition: all 0.3s ease;
  }

  .bracket {
    font-family: var(--font-code);
    font-size: 14px;
    font-weight: 600;
    color: var(--cyan-400);
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .bracket.left {
    transform: translateX(4px);
  }

  .bracket.right {
    transform: translateX(-4px);
  }

  .arrow {
    color: var(--white);
    transition: all 0.3s ease;
  }

  .btt-button:hover .bracket {
    opacity: 1;
  }

  .btt-button:hover .bracket.left {
    transform: translateX(0);
    color: var(--purple-500);
  }

  .btt-button:hover .bracket.right {
    transform: translateX(0);
    color: var(--purple-500);
  }

  .btt-button:hover .arrow {
    transform: translateY(-2px);
    color: var(--cyan-400);
  }

  .btt-hover {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 2px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .hover-text {
    font-family: var(--font-code);
    font-size: 11px;
    font-weight: 600;
    color: var(--purple-400);
  }

  .hover-cursor {
    font-family: var(--font-code);
    font-size: 11px;
    color: var(--cyan-400);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .btt-button:hover .btt-icon {
    opacity: 0;
    transform: translateY(-10px);
  }

  .btt-button:hover .btt-hover {
    opacity: 1;
    transform: translateY(0);
  }

  .btt-tooltip {
    position: absolute;
    right: calc(100% + 16px);
    top: 50%;
    transform: translateY(-50%) translateX(10px);
    padding: 8px 14px;
    background: rgba(var(--surface-900-rgb), 0.95);
    border: 1px solid rgba(var(--white-rgb), 0.1);
    border-radius: 8px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    white-space: nowrap;
    pointer-events: none;
  }

  .btt-tooltip::after {
    content: '';
    position: absolute;
    right: -6px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    width: 10px;
    height: 10px;
    background: rgba(var(--surface-900-rgb), 0.95);
    border-right: 1px solid rgba(var(--white-rgb), 0.1);
    border-top: 1px solid rgba(var(--white-rgb), 0.1);
  }

  .btt-tooltip code {
    font-family: var(--font-code);
    font-size: 12px;
    color: var(--cyan-400);
  }

  .back-to-top:hover .btt-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(-50%) translateX(0);
  }

  .click-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .click-particles .particle {
    position: absolute;
    top: 50%;
    left: 50%;
    font-family: var(--font-code);
    font-size: 12px;
    color: var(--cyan-400);
    opacity: 0;
    transform: translate(-50%, -50%);
  }

  .back-to-top.clicked .click-particles .particle {
    animation: particle-explode 0.6s ease-out forwards;
  }

  .click-particles .particle:nth-child(1) { --angle: 0deg; --distance: 40px; animation-delay: 0s; }
  .click-particles .particle:nth-child(2) { --angle: 60deg; --distance: 45px; animation-delay: 0.05s; }
  .click-particles .particle:nth-child(3) { --angle: 120deg; --distance: 35px; animation-delay: 0.1s; }
  .click-particles .particle:nth-child(4) { --angle: 180deg; --distance: 50px; animation-delay: 0.05s; }
  .click-particles .particle:nth-child(5) { --angle: 240deg; --distance: 38px; animation-delay: 0.1s; }
  .click-particles .particle:nth-child(6) { --angle: 300deg; --distance: 42px; animation-delay: 0s; }

  @keyframes particle-explode {
    0% {
      opacity: 1;
      transform: translate(-50%, -50%) rotate(var(--angle)) translateY(0);
    }
    100% {
      opacity: 0;
      transform: translate(-50%, -50%) rotate(var(--angle)) translateY(calc(-1 * var(--distance)));
    }
  }

  .back-to-top.clicked .btt-button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle, rgba(var(--cyan-400-rgb), 0.3), transparent 70%);
    border-radius: 50%;
    animation: ripple 0.6s ease-out;
  }

  @keyframes ripple {
    0% {
      transform: scale(0);
      opacity: 1;
    }
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  @media (max-width: 768px) {
    .back-to-top {
      bottom: 24px;
      right: 24px;
    }

    .btt-button {
      width: 52px;
      height: 52px;
    }

    .progress-ring {
      width: 52px;
      height: 52px;
    }

    .btt-tooltip {
      display: none;
    }

    .bracket {
      font-size: 12px;
    }

    .arrow {
      width: 14px;
      height: 14px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .back-to-top,
    .btt-button,
    .btt-icon,
    .btt-hover,
    .bracket,
    .arrow,
    .btt-tooltip {
      transition: none;
    }

    .hover-cursor {
      animation: none;
    }

    .back-to-top.clicked .click-particles .particle {
      animation: none;
    }

    .back-to-top.clicked .btt-button::before {
      animation: none;
    }
  }
</style>